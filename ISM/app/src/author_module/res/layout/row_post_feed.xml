<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d15dp"
        android:layout_marginRight="@dimen/d15dp"
        android:orientation="horizontal">


        <com.ism.helper.CircleImageView
            android:id="@+id/img_dp_post_creator"
            android:layout_width="@dimen/dp_post_creater_image_width_height"
            android:layout_height="@dimen/dp_post_creater_image_width_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/d15dp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/d10dp"
            android:src="@drawable/userdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_post_creater_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10dp"
                android:text="@string/emaamall"
                android:textColor="@color/color_black"
                android:textSize="@dimen/d25dp" />

            <TextView
                android:id="@+id/txt_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="4"
                android:padding="@dimen/d10dp"
                android:text="@string/strsentence"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/d18dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_post_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d5dp"
                        android:src="@drawable/like" />


                    <TextView
                        android:id="@+id/txt_post_total_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d10dp"
                        android:text="23"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/d18dp" />


                    <ImageView
                        android:id="@+id/img_post_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d5dp"
                        android:src="@drawable/comment" />

                    <TextView
                        android:id="@+id/txt_post_total_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d10dp"
                        android:text="7"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/d18dp" />

                    <TextView
                        android:id="@+id/txt_comment_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d10dp"
                        android:text="@string/strviewall"
                        android:textColor="@color/color_orange"
                        android:textSize="@dimen/d20dp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/img_post_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/friend" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>


    <EditText
        android:id="@+id/et_writeComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d10dp"
        android:layout_marginLeft="@dimen/d15dp"
        android:layout_marginRight="@dimen/d15dp"
        android:layout_marginTop="@dimen/d10dp"
        android:background="@drawable/selector"
        android:hint="@string/strwriteyourcommenthere"
        android:padding="15sp"
        android:textColorHint="@color/color_text_hint" />


</LinearLayout>
