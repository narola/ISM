<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/rl_controller_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controller_top_height"
        android:background="@drawable/bg_controller_top">


        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_right_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo" />


        <ImageView
            android:id="@+id/img_home"
            android:layout_width="@dimen/controller_top_small_button_width"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_logo"
            android:background="@drawable/bg_right_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_home" />


        <RelativeLayout
            android:id="@+id/rl_controller_top_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_search"
            android:layout_toRightOf="@id/img_home"
            android:visibility="gone">


            <TextView
                android:id="@+id/txt_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_back"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_one"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_two"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_notes"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/controller_top_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/bg_left_controller_top_button"
                android:scaleType="centerInside"
                android:src="@drawable/image_search" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:hint="@string/hint_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/color_graylight"
                android:visibility="gone" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_notes"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_study_mates"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_notes" />

        <ImageView
            android:id="@+id/img_study_mates"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_high_score"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_study_mates" />

        <ImageView
            android:id="@+id/img_high_score"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_chat"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_chat" />

        <ImageView
            android:id="@+id/img_chat"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_chat" />
    </RelativeLayout>


    <LinearLayout

        android:id="@+id/ll_controller_left"
        android:layout_width="@dimen/controller_left_width"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_office"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_office"
            android:scaleType="centerInside"
            android:src="@drawable/image_office" />

        <ImageView
            android:id="@+id/img_books"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_assessment"
            android:scaleType="centerInside"
            android:src="@drawable/image_office" />


        <ImageView
            android:id="@+id/img_logout"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="@dimen/controller_left_width"
            android:background="@color/bg_logout"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logout" />
    </LinearLayout>


</RelativeLayout>