<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_label_mystudents"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50dp"
        android:background="@color/color_blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MY STUDENTS"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d10dp"
            android:textColor="@color/color_white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ism.helper.CircleImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/userdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADAM ROSS"
                android:textAllCaps="true"
                android:textSize="@dimen/d20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
