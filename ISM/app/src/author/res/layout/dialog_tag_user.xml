<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/d50dp"
        android:layout_marginLeft="@dimen/d150dp"
        android:layout_marginRight="@dimen/d130dp"
        android:layout_marginTop="@dimen/d50dp"
        android:background="@drawable/news_feed_post_box"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_search_active" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/news_feed_separator_color" />

            <EditText
                android:id="@+id/et_search_studymates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/strsearchstudymates"
                android:paddingLeft="@dimen/d20dp"
                android:textColor="@color/color_orange"
                android:textColorHint="@color/color_orange"
                android:textSize="@dimen/d20dp" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/news_feed_separator_color" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_studymates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_tag_users"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_orange"
                android:gravity="center"
                android:paddingBottom="@dimen/d10dp"
                android:paddingTop="@dimen/d10dp"
                android:text="@string/strtag"
                android:textAllCaps="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/d40dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/tv_dialog_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_orange"
                android:gravity="center"
                android:paddingBottom="@dimen/d10dp"
                android:paddingTop="@dimen/d10dp"
                android:text="@string/strclose"
                android:textAllCaps="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/d40dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
