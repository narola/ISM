<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<!-- "background shadow" -->
	<item>
		<shape android:shape="rectangle" >
			<solid android:color="@color/border_gray" />
			<corners android:radius="@dimen/edit_radius" />
		</shape>
	</item>
	<!-- background color -->
	<item
		android:bottom="2dp"
		android:left="2dp"
		android:right="2dp"
		android:top="2dp">
		<shape android:shape="rectangle" >
			<solid android:color="@android:color/white" />
			<corners android:radius="@dimen/edit_radius" />
		</shape>
	</item>
	<!-- over left shadow -->
	<item>
		<shape android:shape="rectangle" >
			<gradient
				android:startColor="@android:color/transparent"
				android:centerColor="@android:color/transparent"
				android:endColor="@color/edit_shadow"
				android:angle="180"
				android:centerX="1.5" />

			<corners android:radius="@dimen/edit_radius" />
		</shape>
	</item>
	<!-- over right shadow -->
	<item>
		<shape android:shape="rectangle" >
			<gradient
				android:startColor="@android:color/transparent"
				android:centerColor="@android:color/transparent"
				android:endColor="@color/edit_shadow"
				android:angle="360"
				android:centerX="0.999" />

			<corners android:radius="@dimen/edit_radius" />
		</shape>
	</item>
	<!-- over top shadow -->
	<item>
		<shape android:shape="rectangle" >
			<gradient
				android:startColor="@color/edit_shadow"
				android:centerColor="@android:color/transparent"
				android:endColor="@android:color/transparent"
				android:angle="270"
				android:centerY="0.1"
				android:type="linear" />

			<corners android:radius="@dimen/edit_radius" />
		</shape>
	</item>
	<!-- over bottom shadow -->
	<item>
		<shape android:shape="rectangle" >
			<gradient
				android:startColor="@color/edit_shadow"
				android:centerColor="@android:color/transparent"
				android:endColor="@android:color/transparent"
				android:angle="90"
				android:centerY="0.1"
				android:type="linear" />

			<corners android:radius="@dimen/edit_radius" />
		</shape>
	</item>

	<!-- over top shadow -->
