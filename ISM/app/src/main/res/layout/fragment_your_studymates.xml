<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.ism.fragment.userprofile.YourStudymatesFragment">

	<android.support.v7.widget.RecyclerView
		android:id="@+id/recycler_your_studymates"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_above="@+id/rl_recommended_studymates"></android.support.v7.widget.RecyclerView>

	<TextView
		android:id="@+id/txt_empty_view_studymates"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/rl_recommended_studymates"
		android:text="@string/no_studymates_found"
		android:textSize="@dimen/text_size_emptylist_message_large"
		android:gravity="center"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_above="@+id/rl_recommended_studymates"
	    android:background="@color/border_table"/>

	<RelativeLayout
		android:id="@+id/rl_recommended_studymates"
		android:layout_width="match_parent"
		android:layout_height="225dp"
		android:layout_alignParentBottom="true"
		android:background="@color/border_table"
		android:layout_margin="5dp"
		android:padding="1dp">

		<TextView
			android:id="@+id/txt_header_recommended"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/recommended_studymates"
			android:textAllCaps="true"
			android:gravity="center"
			android:textSize="20sp"
			android:padding="3dp"
			android:textColor="@color/bg_app_dark"
			android:background="@color/bg_table_head"
			android:layout_marginBottom="1dp"/>

		<ImageView
			android:id="@+id/img_previous"
			android:layout_width="40dp"
			android:layout_height="match_parent"
			android:layout_below="@id/txt_header_recommended"
			android:src="@drawable/img_previous"
			android:scaleType="centerInside"
			android:background="@color/white"/>

		<ImageView
			android:id="@+id/img_next"
			android:layout_width="40dp"
			android:layout_height="match_parent"
			android:layout_below="@id/txt_header_recommended"
			android:layout_alignParentRight="true"
			android:src="@drawable/img_next"
			android:scaleType="centerInside"
			android:background="@color/white"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_recommended_studymates"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/txt_header_recommended"
			android:layout_toRightOf="@id/img_previous"
			android:layout_toLeftOf="@id/img_next"
			android:background="@color/white"></android.support.v7.widget.RecyclerView>

		<TextView
			android:id="@+id/txt_empty_view_recommended"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/no_studymates_found"
			android:textSize="@dimen/text_size_emptylist_message_large"
			android:visibility="gone"
			android:gravity="center"/>
	</RelativeLayout>
</RelativeLayout>
