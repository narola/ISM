<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.ism.fragment.userprofile.YourStudymatesFragment">

	<android.support.v7.widget.RecyclerView
		android:id="@+id/recycler_your_studymates"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="7"></android.support.v7.widget.RecyclerView>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
	    android:background="@color/border_table"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
		android:background="@color/border_table"
		android:layout_margin="10dp"
		android:padding="1dp">

		<TextView
			android:id="@+id/txt_header_recommended"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/recommended_studymates"
			android:textAllCaps="true"
			android:gravity="center"
			android:textSize="20sp"
			android:padding="3dp"
			android:textColor="@color/bg_app_dark"
			android:background="@color/bg_table_head"
			android:layout_marginBottom="1dp"/>

		<ImageView
			android:id="@+id/img_previous"
			android:layout_width="40dp"
			android:layout_height="match_parent"
			android:layout_below="@id/txt_header_recommended"
			android:background="@color/color_gray_light"/>

		<ImageView
			android:id="@+id/img_next"
			android:layout_width="40dp"
			android:layout_height="match_parent"
			android:background="@color/color_gray_light"
			android:layout_below="@id/txt_header_recommended"
			android:layout_alignParentRight="true"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_recommended_studymates"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/txt_header_recommended"
			android:layout_toRightOf="@id/img_previous"
			android:layout_toLeftOf="@id/img_next"
			android:background="@color/color_white"></android.support.v7.widget.RecyclerView>
	</RelativeLayout>
</LinearLayout>
