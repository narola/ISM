<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="230dp"
    android:layout_marginBottom="@dimen/d10dp"
    android:layout_marginTop="@dimen/d10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_user_books"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="7dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <ImageView
            android:id="@+id/img_book_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/img_pic"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/d5dp"
            android:src="@drawable/img_i"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rr_add_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_pic"
            android:background="#10ffffff">

            <ImageView
                android:id="@+id/img_book_add"
                android:layout_width="@dimen/d30dp"
                android:layout_height="@dimen/d30dp"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/d5dp"
                android:src="@drawable/selector_library"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_add_fav"
                android:layout_width="@dimen/d30dp"
                android:layout_height="@dimen/d30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/d5dp"
                android:src="@drawable/img_unlike_red"
                android:visibility="gone" />
        </RelativeLayout>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:background="@color/color_white"
        android:layout_marginBottom="@dimen/d5dp"
        android:layout_marginLeft="@dimen/d5dp"
        android:layout_marginRight="@dimen/d5dp"
        android:layout_below="@+id/img_pic"
        android:padding="1dp"
        android:text="Book Name"
        android:textColor="@color/cpb_red"
        android:textSize="15sp" />
</RelativeLayout>