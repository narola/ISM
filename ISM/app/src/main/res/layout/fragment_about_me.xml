<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext="com.ism.fragment.userProfile.AboutMeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp187"
            android:layout_height="@dimen/dp458"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp150">

                <RelativeLayout
                    android:id="@+id/rr_img"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp150"
                    android:layout_margin="@dimen/dp8">

                    <ImageView
                        android:id="@+id/img_profile_pic"
                        android:layout_width="@dimen/dp127"
                        android:layout_height="@dimen/dp127"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_default_dp" />

                    <ImageView
                        android:id="@+id/img_profile_edit"
                        android:layout_width="@dimen/dp38"
                        android:layout_height="@dimen/dp38"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp4"
                        android:background="@drawable/shape_circle"
                        android:padding="@dimen/dp4"
                        android:src="@drawable/edit_profile" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp26"
                android:layout_marginRight="@dimen/dp30"
                android:paddingBottom="@dimen/dp8"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="@dimen/sp15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/txt_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/studymate_tab_bg"
                android:gravity="left|center_vertical"
                android:padding="@dimen/dp8"
                android:textColor="@color/bg_app_dark"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginRight="@dimen/dp8"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/txt_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/studymate_tab_bg"
                android:gravity="left|center_vertical"
                android:padding="@dimen/dp8"
                android:textColor="@color/bg_app_dark"
                android:textSize="@dimen/sp15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9" />

            <EditText
                android:id="@+id/et_contactNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/call"
                android:drawablePadding="@dimen/dp8"
                android:inputType="phone"
                android:padding="@dimen/dp8"
                android:textSize="@dimen/sp14" />

            <EditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/birthday"
                android:drawablePadding="@dimen/dp8"
                android:padding="@dimen/dp8"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30"
                android:layout_marginTop="@dimen/dp8"
                android:background="@drawable/border_green"
                android:drawablePadding="@dimen/dp15"
                android:drawableRight="@drawable/edit_profile"
                android:gravity="center"
                android:paddingLeft="@dimen/dp11"
                android:paddingRight="@dimen/dp11"
                android:textSize="@dimen/sp15" />
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="#cacaca" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fafafa"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_social"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/dp2"
                        android:text="@string/strSocial"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strZero"
                                android:textColor="@color/color_blue"
                                android:textSize="@dimen/sp19" />

                            <TextView
                                android:id="@+id/txt_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_total_post"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strpost"
                                android:textSize="@dimen/sp11" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="#cacaca"
                            android:padding="@dimen/dp2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_Studymates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strZero"
                                android:textColor="@color/color_blue"
                                android:textSize="@dimen/sp19" />

                            <TextView
                                android:id="@+id/txt_studymates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="Studymates"
                                android:textSize="@dimen/sp11" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp11"
                        android:layout_marginRight="@dimen/dp11"
                        android:background="#cacaca"
                        android:padding="@dimen/dp2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_author_followed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/dp2"
                            android:text="@string/strZero"
                            android:textColor="@color/color_blue"
                            android:textSize="@dimen/sp19" />

                        <TextView
                            android:id="@+id/txt_author_followed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/dp2"
                            android:text="Author Follwed"
                            android:textSize="@dimen/sp11" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:background="#e8e8e8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_academic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/dp2"
                        android:text="@string/strAcademic"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_ism_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strZero"
                                android:textColor="@color/green"
                                android:textSize="@dimen/sp19" />

                            <TextView
                                android:id="@+id/txt_ism_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strIsmScore"
                                android:textSize="@dimen/sp11" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="@dimen/dp1"
                            android:layout_height="@dimen/dp38"
                            android:layout_gravity="center"
                            android:background="#cacaca"
                            android:padding="@dimen/dp2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_ism_rank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strZero"
                                android:textColor="@color/green"
                                android:textSize="@dimen/sp19" />

                            <TextView
                                android:id="@+id/txt_ism_rank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strIsmRank"
                                android:textSize="@dimen/sp11" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginLeft="@dimen/dp11"
                        android:layout_marginRight="@dimen/dp11"
                        android:background="#cacaca"
                        android:padding="@dimen/dp2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_exam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strZero"
                                android:textColor="@color/green"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/txt_exam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strExams"
                                android:textSize="@dimen/sp11" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="@dimen/dp1"
                            android:layout_height="@dimen/dp38"
                            android:layout_gravity="center"
                            android:background="#cacaca"
                            android:padding="@dimen/dp4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_assignment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strZero"
                                android:textColor="@color/green"
                                android:textSize="@dimen/sp19" />

                            <TextView
                                android:id="@+id/txt_assignment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strAssignments"
                                android:textSize="@dimen/sp11" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/dp1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:background="#e8e8e8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_excellence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/dp2"
                        android:text="@string/strExcellence"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_que_asked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strZero"
                                android:textColor="@color/red_error"
                                android:textSize="@dimen/sp19" />

                            <TextView
                                android:id="@+id/txt_que_asked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_total_post"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strQuestionAsked"
                                android:textSize="@dimen/sp11" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="@dimen/dp1"
                            android:layout_height="@dimen/dp38"
                            android:layout_gravity="center"
                            android:background="#cacaca"
                            android:padding="@dimen/dp2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_fav_questions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strZero"
                                android:textColor="@color/red_error"
                                android:textSize="@dimen/sp19" />

                            <TextView
                                android:id="@+id/txt_fav_questions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                android:text="@string/strFavouriteQuestions"
                                android:textSize="@dimen/sp11" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginLeft="@dimen/dp11"
                        android:layout_marginRight="@dimen/dp11"
                        android:background="#cacaca"
                        android:padding="@dimen/dp2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_badges_earned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/dp2"
                            android:text="@string/strZero"
                            android:textColor="@color/red_error"
                            android:textSize="@dimen/sp19" />

                        <TextView
                            android:id="@+id/txt_badges_earned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/dp2"
                            android:text="Badges Earned"
                            android:textSize="@dimen/sp11" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="#e8e8e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp38"
                    android:background="#f2f2f2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_about_me"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp38"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp8"
                        android:text="@string/strAboutYou"
                        android:textSize="@dimen/sp15" />

                    <ImageView
                        android:id="@+id/img_edit_about_me"
                        android:layout_width="@dimen/dp23"
                        android:layout_height="@dimen/dp23"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp8"
                        android:gravity="center_vertical"
                        android:src="@drawable/edit_profile"
                        android:visibility="gone" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_clickAddAboutMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_your_ambition"
                        android:layout_margin="@dimen/dp8"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/plus"
                        android:drawableRight="@drawable/aroow_gray"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp8"
                        android:text="@string/strClickToWriteAboutYourSelf"
                        android:textSize="@dimen/sp15" />
                </ScrollView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="#e8e8e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp38"
                    android:background="#f2f2f2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_your_ambition"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp38"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp8"
                        android:text="@string/strYourAmbitionInLife"
                        android:textSize="@dimen/sp15" />

                    <ImageView
                        android:id="@+id/img_edit_your_ambition"
                        android:layout_width="@dimen/dp23"
                        android:layout_height="@dimen/dp23"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp8"
                        android:gravity="center_vertical"
                        android:src="@drawable/edit_profile"
                        android:visibility="gone" />
                </LinearLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_clickAddAmbitions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_your_ambition"
                        android:layout_margin="@dimen/dp8"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/plus"
                        android:drawableRight="@drawable/aroow_gray"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp8"
                        android:text="@string/strClickTOAddAmbitionInLife"
                        android:textSize="@dimen/sp15" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>