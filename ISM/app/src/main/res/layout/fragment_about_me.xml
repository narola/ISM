<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="horizontal"
    tools:context="com.ism.fragment.userprofile.AboutMeFragment">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <RelativeLayout
                android:id="@+id/rr_img"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="@dimen/d10dp">

                <ImageView
                    android:id="@+id/img_profile_pic"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/userdp" />

                <ImageView
                    android:id="@+id/img_profile_edit"
                    android:layout_width="@dimen/d50dp"
                    android:layout_height="@dimen/d50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/d20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_circle"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/edit_profile" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="@dimen/d40dp"
            android:paddingBottom="@dimen/d10dp"
            android:textAllCaps="true"
            android:textColor="@color/color_green"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9" />

        <TextView
            android:id="@+id/txt_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/studymate_tab_bg"
            android:gravity="left|center_vertical"
            android:padding="@dimen/d15dp"
            android:textColor="@color/bg_app_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/d10dp"
            android:background="#d9d9d9" />

        <TextView
            android:id="@+id/txt_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/studymate_tab_bg"
            android:gravity="left|center_vertical"
            android:padding="@dimen/d15dp"
            android:textColor="@color/bg_app_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9" />

        <EditText
            android:id="@+id/et_contactNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="@dimen/d10dp"
            android:inputType="phone"
            android:padding="@dimen/d10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:drawableLeft="@drawable/birthday"
            android:drawablePadding="@dimen/d10dp"
            android:padding="@dimen/d10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/d40dp"
            android:layout_marginLeft="@dimen/d40dp"
            android:layout_marginTop="@dimen/d10dp"
            android:background="@drawable/border_green"
            android:drawablePadding="@dimen/d20dp"
            android:drawableRight="@drawable/edit_profile"
            android:gravity="center"
            android:paddingLeft="@dimen/d15dp"
            android:paddingRight="@dimen/d15dp"

            android:textAllCaps="false"
            android:textSize="@dimen/d20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#cacaca" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fafafa"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d3dp"
                    android:text="SOCIAL"
                    android:textSize="@dimen/d18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="550"
                            android:textColor="@color/color_blue"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_total_post"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Post"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#cacaca"
                        android:padding="@dimen/d3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_Studymates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="550"
                            android:textColor="@color/color_blue"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_studymates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Studymates"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/d15dp"
                    android:layout_marginRight="@dimen/d15dp"
                    android:background="#cacaca"
                    android:padding="@dimen/d3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_total_author_followed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d3dp"
                        android:text="550"
                        android:textColor="@color/color_blue"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/txt_author_followed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d3dp"
                        android:text="Author Follwed"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/d10dp"
                android:layout_marginTop="@dimen/d10dp"
                android:background="#e8e8e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_academic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d3dp"
                    android:text="ACADEMIC"
                    android:textSize="@dimen/d18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_ism_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="550"
                            android:textColor="@color/color_green"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_ism_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="ISM Score"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#cacaca"
                        android:padding="@dimen/d3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_ism_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="550"
                            android:textColor="@color/color_green"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_ism_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="ISM Rank"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/d15dp"
                    android:layout_marginRight="@dimen/d15dp"
                    android:background="#cacaca"
                    android:padding="@dimen/d3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_exam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="550"
                            android:textColor="@color/color_green"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_exam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Exams"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#cacaca"
                        android:padding="@dimen/d5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_assignment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="550"
                            android:textColor="@color/color_green"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_assignment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Assignment"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/d10dp"
                android:layout_marginTop="@dimen/d10dp"
                android:background="#e8e8e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_excellence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d3dp"
                    android:text="EXCELLENCE"
                    android:textSize="@dimen/d18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_que_asked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="550"
                            android:textColor="@color/red_error"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_que_asked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_total_post"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Question Asked"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#cacaca"
                        android:padding="@dimen/d3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_fav_questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="550"
                            android:textColor="@color/red_error"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_fav_questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Favorite Questions"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/d15dp"
                    android:layout_marginRight="@dimen/d15dp"
                    android:background="#cacaca"
                    android:padding="@dimen/d3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_total_badges_earned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d3dp"
                        android:text="550"
                        android:textColor="@color/red_error"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/txt_badges_earned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d3dp"
                        android:text="Badges Earned"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_about_me"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#f2f2f2"
                android:drawableRight="@drawable/edit_profile"
                android:gravity="center_vertical"
                android:padding="@dimen/d10dp"
                android:text="@string/strAboutYou"
                android:textSize="@dimen/d20sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_clickAddAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_your_ambition"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/color_white"
                    android:drawableLeft="@drawable/plus"
                    android:drawableRight="@drawable/aroow_gray"
                    android:gravity="center_vertical"
                    android:padding="@dimen/d10dp"
                    android:text="@string/strClickToWriteAboutYourSelf"
                    android:textSize="@dimen/d20sp" />
            </ScrollView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e8e8e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_your_ambition"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="#f2f2f2"
                android:drawableRight="@drawable/edit_profile"
                android:gravity="center_vertical"
                android:padding="@dimen/d10dp"
                android:text="@string/strYourAmbitionInLife"
                android:textSize="@dimen/d20sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_clickAddAmbitions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_your_ambition"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/color_white"
                    android:drawableLeft="@drawable/plus"
                    android:drawableRight="@drawable/aroow_gray"
                    android:gravity="center_vertical"
                    android:padding="@dimen/d10dp"
                    android:text="@string/strClickTOAddAmbitionInLife"
                    android:textSize="@dimen/d20sp" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>