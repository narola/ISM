<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    xmlns:accordion="http://schemas.android.com/apk/res-auto"
			    xmlns:tools="http://schemas.android.com/tools"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:background="@drawable/bg_white_border_gray_left"
                android:paddingLeft="@dimen/d1dp"
			    tools:mContext="com.ism.fragment.ChatFragment">

    <com.ism.views.AccordionView
        android:id="@+id/accordion_view_chat"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff5f5f5"
        android:orientation="vertical"
        accordion:header_layout_fold_button_id="@id/foldButton"
        accordion:header_layout_id="@layout/accordion_header"
        accordion:header_layout_label_id="@id/txt_headerName"
        accordion:section_bottom="@layout/accordion_footer"
        accordion:section_container="@layout/accordion_section"
        accordion:section_container_parent="@id/rl_section_content"
        accordion:section_headers="@array/chat"
        accordion:section_visibility="@array/accordion_notice_visibility">

        <LinearLayout
            android:id="@+id/ll_studymates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_studymates"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d400dp"
                android:divider="@color/border_gray"
                android:dividerHeight="@dimen/d1dp"
                android:paddingLeft="@dimen/d10dp"
                android:paddingRight="@dimen/d10dp"
                android:layout_marginBottom="@dimen/margin_chat" />

            <Button
                android:id="@+id/btn_suggested_studymates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_chat"
                android:layout_marginRight="@dimen/margin_chat"
                android:layout_marginBottom="@dimen/margin_chat"
                android:text="@string/suggested_studymates"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn_pink"
                android:textSize="@dimen/d18sp" />

            <Button
                android:id="@+id/btn_find_more_studymates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_chat"
                android:layout_marginRight="@dimen/margin_chat"
                android:layout_marginBottom="@dimen/margin_chat"
                android:text="@string/find_more_studymates"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn_blue"
                android:textSize="@dimen/d18sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_highScore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d450dp"
            android:background="@drawable/bg_highscore_subjectlist" />
    </com.ism.views.AccordionView>
</RelativeLayout>
