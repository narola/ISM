<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp11"
    android:layout_marginRight="@dimen/dp11"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp11"
        android:layout_marginRight="@dimen/dp11"
        android:layout_marginTop="@dimen/dp11"
        android:background="@color/news_feed_post_box_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ism.views.CircleImageView
            android:id="@+id/img_commenter_dp"
            android:layout_width="@dimen/dp38"
            android:layout_height="@dimen/dp38"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginTop="@dimen/dp11"
            android:padding="@dimen/dp8"
            android:src="@drawable/img_default_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp11"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_commenter_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp4"
                    android:text="Adam Stanger"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/txt_commenter_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp8"
                    android:ellipsize="end"
                    android:padding="@dimen/dp4"
                    android:text="Hi...how are you?"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/dp14" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_comment_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_comments"
                android:layout_marginLeft="@dimen/dp11"
                android:layout_toRightOf="@+id/img_commenter_dp"
                android:padding="@dimen/dp4"
                android:text="1 day" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


