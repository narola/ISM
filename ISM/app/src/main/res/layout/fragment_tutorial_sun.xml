<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_welcome"
                tools:context=".fragment.tutorialGroup.TutorialSunFragment">

	<ImageView
		android:id="@+id/img_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/img_logo_ism"
		android:layout_marginTop="20dp"
		android:layout_centerHorizontal="true"/>

	<com.makeramen.roundedimageview.RoundedImageView
		android:id="@+id/img_dp_teacher"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_below="@+id/img_logo"
		android:layout_alignStart="@id/img_logo"
		android:layout_marginLeft="-120dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="30dp"
		android:src="@drawable/img_default_dp"
		android:scaleType="centerCrop"
		app:riv_corner_radius="4dp"
		app:riv_border_width="1dp"
		app:riv_border_color="@color/green"
		app:riv_mutate_background="true"/>

	<TextView
		android:id="@+id/txt_teacher_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_alignTop="@id/img_dp_teacher"
		android:layout_toRightOf="@id/img_dp_teacher"
		android:textColor="@color/green"
		android:textSize="26sp"/>

	<TextView
		android:id="@+id/txt_teacher_school"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_teacher_name"
		android:layout_toRightOf="@id/img_dp_teacher"
		android:textColor="@color/green_xlight"
		android:textSize="22sp"/>

	<TextView
		android:id="@+id/txt_teacher_experience"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_teacher_school"
		android:layout_toRightOf="@id/img_dp_teacher"
		android:textColor="@color/green_xlight"
		android:textSize="22sp"/>

	<TextView
		android:id="@+id/txt_message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/img_dp_teacher"
		android:textColor="@color/color_white"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="200dp"
		android:layout_marginRight="200dp"
		android:textSize="22sp"
		android:gravity="center"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_marginTop="30dp"
		android:layout_below="@id/txt_message">
		
		<LinearLayout
			android:layout_width="@dimen/member_item_width"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<com.ism.views.CircleImageView
				android:id="@+id/img_dp_member1"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_size_member_sunday"
				android:src="@drawable/img_default_dp"/>

			<TextView
				android:id="@+id/txt_name_member1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_name_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/green_xlight"
				android:gravity="center"/>

			<TextView
				android:id="@+id/txt_school_member1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_school_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/color_white"
				android:gravity="center"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="@dimen/member_item_width"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<com.ism.views.CircleImageView
				android:id="@+id/img_dp_member2"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_size_member_sunday"
				android:src="@drawable/img_default_dp"/>

			<TextView
				android:id="@+id/txt_name_member2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_name_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/green_xlight"
				android:gravity="center"/>

			<TextView
				android:id="@+id/txt_school_member2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_school_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/color_white"
				android:gravity="center"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="@dimen/member_item_width"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<com.ism.views.CircleImageView
				android:id="@+id/img_dp_member3"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_size_member_sunday"
				android:src="@drawable/img_default_dp"/>

			<TextView
				android:id="@+id/txt_name_member3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_name_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/green_xlight"
				android:gravity="center"/>

			<TextView
				android:id="@+id/txt_school_member3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_school_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/color_white"
				android:gravity="center"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="@dimen/member_item_width"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<com.ism.views.CircleImageView
				android:id="@+id/img_dp_member4"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_size_member_sunday"
				android:src="@drawable/img_default_dp"/>

			<TextView
				android:id="@+id/txt_name_member4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_name_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/green_xlight"
				android:gravity="center"/>

			<TextView
				android:id="@+id/txt_school_member4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_school_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/color_white"
				android:gravity="center"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="@dimen/member_item_width"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<com.ism.views.CircleImageView
				android:id="@+id/img_dp_member5"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_size_member_sunday"
				android:src="@drawable/img_default_dp"/>

			<TextView
				android:id="@+id/txt_name_member5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_name_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/green_xlight"
				android:gravity="center"/>

			<TextView
				android:id="@+id/txt_school_member5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_school_member_sunday"
				android:layout_marginTop="@dimen/margin_text_member_sunday"
				android:textColor="@color/color_white"
				android:gravity="center"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
