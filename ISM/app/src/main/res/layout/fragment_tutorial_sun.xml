<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bg_welcome"
             tools:mContext=".fragment.tutorialGroup.TutorialSunFragment">

	<ImageView
		android:id="@+id/img_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/img_logo_ism"
		android:layout_marginTop="20dp"
		android:layout_centerHorizontal="true"/>

	<ImageView
		android:id="@+id/img_dp_teacher"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_below="@+id/img_logo"
		android:layout_alignStart="@id/img_logo"
		android:layout_marginLeft="-120dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="20dp"
		android:src="@drawable/img_default_dp"/>

	<TextView
		android:id="@+id/txt_teacher_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_alignTop="@id/img_dp_teacher"
		android:layout_toRightOf="@id/img_dp_teacher"
		android:textColor="@color/green"
		android:textSize="26sp"/>

	<TextView
		android:id="@+id/txt_teacher_school"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_teacher_name"
		android:layout_toRightOf="@id/img_dp_teacher"
		android:textColor="@color/green_xlight"
		android:textSize="22sp"/>

	<TextView
		android:id="@+id/txt_teacher_experience"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_teacher_school"
		android:layout_toRightOf="@id/img_dp_teacher"
		android:textColor="@color/green_xlight"
		android:textSize="22sp"/>
</RelativeLayout>
