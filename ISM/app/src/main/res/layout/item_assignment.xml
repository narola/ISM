<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp187"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp8"
    android:layout_marginLeft="@dimen/dp4"
    android:layout_marginRight="@dimen/dp4"
    android:layout_marginTop="@dimen/dp8"
    android:background="@drawable/bg_white_border_gray">

    <ImageView
        android:id="@+id/img_subject"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp68"
        android:background="@drawable/bg_chemistry"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="@dimen/dp8"
        android:singleLine="true"
        android:text="Subject Name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp13"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_exam_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_subject"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/dp8"
        android:background="@drawable/btn_dark_grey"
        android:singleLine="false"
        android:text="Exam Type"
        android:textColor="@color/white"
        android:textSize="@dimen/dp11" />

    <com.ism.views.CircleImageView
        android:id="@+id/img_user_pic"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:padding="@dimen/dp11"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp8"
        android:src="@drawable/img_default_dp"
        android:layout_below="@+id/img_menu"
        android:layout_toEndOf="@+id/txt_exam_by" />

    <TextView
        android:id="@+id/txt_exam_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_subject"
        android:layout_marginLeft="@dimen/dp4"
        android:padding="@dimen/dp4"
        android:text="Assignment given by"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp12" />

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="@dimen/dp23"
        android:layout_height="@dimen/dp23"
        android:layout_alignParentEnd="true"
        android:src="@drawable/menu_icon" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/txt_exam_by"
        android:background="@color/divider_light" />

    <TextView
        android:id="@+id/txt_exam_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:gravity="center"
        android:lines="2"
        android:ellipsize="end"
        android:padding="@dimen/dp8"
        android:text="Assignment Name"
        android:textColor="@color/bg_app_dark"
        android:textSize="@dimen/sp15" />

    <ImageView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_exam_name"
        android:background="@color/divider_light" />

    <TextView
        android:id="@+id/txt_book_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:gravity="center"
        android:padding="@dimen/dp4"
        android:singleLine="true"
        android:text="Book"
        android:textColor="@color/green"
        android:textSize="@dimen/sp12" />

</RelativeLayout>
