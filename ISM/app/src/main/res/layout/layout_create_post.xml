<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_highscore_subjectlist"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/bg_controller_top_dark"
            android:gravity="center"
            android:padding="@dimen/d5dp"
            android:text="@string/strcancel"
            android:id="@+id/txt_cancel"
            android:textAllCaps="true"
            android:textColor="@color/color_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/color_white"
            android:gravity="center"
            android:padding="@dimen/d5dp"
            android:text="@string/strcreatepost"
            android:textAllCaps="true"
            android:textColor="@color/color_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/bg_controller_top_dark"
            android:gravity="center"
            android:padding="@dimen/d5dp"
            android:id="@+id/txt_post"
            android:text="@string/strpost"
            android:textAllCaps="true"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:background="@drawable/bg_highscore_subjectlist"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_posttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="2"
                android:background="@drawable/bg_highscore_subjectlist"
                android:gravity="top|left"
                android:hint="SAY IT"
                android:inputType="textMultiLine"
                android:padding="5sp"
                android:text=""
                android:textColor="@color/color_gray"
                android:textColorHint="@color/color_text_hint" />

            <LinearLayout
                android:id="@+id/ll_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d5dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="@dimen/d5dp"
                android:visibility="visible">

                <com.ism.helper.HorizontalListView
                    android:id="@+id/lv_mediafiles"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:padding="@dimen/d5dp"
                    android:visibility="visible" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d5dp"

            android:layout_weight="4"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Image"
                android:gravity="center"
                android:background="@drawable/bg_highscore_subjectlist"
                android:padding="@dimen/d5dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/txt_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Audio"
                android:gravity="center"
                android:background="@drawable/bg_highscore_subjectlist"
                android:padding="@dimen/d5dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/txt_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Video"
                android:gravity="center"
                android:background="@drawable/bg_highscore_subjectlist"
                android:padding="@dimen/d5dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/txt_smiley"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Emoticons"
                android:gravity="center"
                android:background="@drawable/bg_highscore_subjectlist"
                android:padding="@dimen/d5dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d5dp"
            android:background="@color/color_text_hint"
            android:padding="@dimen/d5dp"
            android:text="Record"
            android:textColor="@color/color_gray" />

        <TextView
            android:id="@+id/txt_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d5dp"
            android:padding="@dimen/d5dp"
            android:text="00:00:00"
            android:textColor="@color/color_green" />

        <TextView
            android:id="@+id/txt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d5dp"
            android:background="@color/color_text_hint"
            android:padding="@dimen/d5dp"
            android:text="Stop"
            android:textColor="@color/color_gray"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>