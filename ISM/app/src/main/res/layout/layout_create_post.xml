<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_highscore_subject"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/bg_controller_top_dark"
            android:gravity="center"
            android:padding="@dimen/d5sp"
            android:text="@string/strcancel"
            android:textAllCaps="true"
            android:textColor="@color/color_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/color_white"
            android:gravity="center"
            android:padding="@dimen/d5sp"
            android:text="@string/strcreatepost"
            android:textAllCaps="true"
            android:textColor="@color/color_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/bg_controller_top_dark"
            android:gravity="center"
            android:padding="@dimen/d5sp"
            android:text="@string/strpost"
            android:textAllCaps="true"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="1sp"
        android:weightSum="4.6">

        <EditText
            android:id="@+id/et_posttext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/bg_highscore_subjectlist"
            android:gravity="top|left"
            android:hint="SAY IT" android:layout_margin="5sp"
            android:inputType="textMultiLine"
            android:padding="5sp"
            android:text=""
            android:textColor="@color/color_gray"
            android:textColorHint="@color/color_text_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/d5sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_image"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/bg_highscore_subjectlist"
                android:padding="@dimen/d5sp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/img_audio"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/bg_highscore_subjectlist"
                android:padding="@dimen/d5sp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/video"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/bg_highscore_subjectlist"
                android:padding="@dimen/d5sp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/img_smiley"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/bg_highscore_subjectlist"
                android:padding="@dimen/d5sp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d5sp"
        android:background="@drawable/bg_highscore_subjectlist"
        android:orientation="horizontal"
        android:padding="@dimen/d5sp">

        <com.ism.helper.HorizontalListView

            android:id="@+id/lv_mediafiles"
            android:layout_width="match_parent"
            android:layout_height="165sp"
            android:padding="@dimen/d5sp" />

    </LinearLayout>
</LinearLayout>