<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:mContext="com.ism.fragment.desk.JotterScientificSymbolFragment">

    <TextView
        android:id="@+id/txt_scientific_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="@dimen/d10dp"
        android:text="@string/strScientificSymbol"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/d20sp" />

    <GridView
        android:id="@+id/gridview_scientific_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_scientific_symbol"
        android:horizontalSpacing="0dp"
        android:columnWidth="@dimen/d10dp"
        android:numColumns="6"
        android:verticalSpacing="0dp" />

    <TextView
        android:id="@+id/txt_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridview_scientific_symbol"
        android:layout_marginTop="@dimen/d10dp"
        android:background="@color/green"
        android:padding="@dimen/d10dp"
        android:text="@string/strInsert"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/d20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_insert"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_images"
                android:layout_width="@dimen/d50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_attach_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10dp"
                android:text="@string/strImages"
                android:textSize="@dimen/d20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/d10dp"
            android:layout_marginTop="@dimen/d10dp"
            android:background="@color/text_gray" />

        <LinearLayout
            android:id="@+id/ll_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="@dimen/d50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_attach_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10dp"
                android:text="Video"
                android:textSize="@dimen/d20sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>