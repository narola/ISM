<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@android:color/white">

	<com.ism.views.CircleImageView
		android:id="@+id/img_dp"
		android:layout_width="@dimen/dp_size_list_comment"
		android:layout_height="@dimen/dp_size_list_comment"
		android:layout_centerHorizontal="true"
		android:layout_margin="5dp"
		android:src="@drawable/userdp"/>

	<TextView
		android:id="@+id/txt_user_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/img_dp"
		android:textColor="@color/bg_app_dark"
		android:textSize="18sp"/>

	<TextView
		android:id="@+id/txt_following"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/txt_user_name"
		android:textColor="@color/color_green"
		android:textSize="16sp"/>

	<TextView
		android:id="@+id/txt_school"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/txt_following"
		android:textColor="@color/bg_app_dark"
		android:textSize="16sp"/>

	<TextView
		android:id="@+id/txt_course"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/txt_school"
		android:textColor="@color/bg_app_dark"
		android:textSize="16sp"/>

	<Button
		android:id="@+id/btn_add_studymate"
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:layout_centerHorizontal="true"
		android:text="@string/add_studymate"
		android:layout_alignParentBottom="true"/>
</RelativeLayout>