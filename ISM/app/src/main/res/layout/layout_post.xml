<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext="com.ism.activity.PostFeedActivity">
    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical">-->
    <com.ism.commonsource.view.ActionProcessButton
        android:id="@+id/prog_host"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/color_actionbar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_icon"
            android:gravity="center"
            android:padding="@dimen/dp4"
            android:text="@string/strcancel"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/bg_icon"
            android:drawableRight="@drawable/arrow"
            android:gravity="center"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp15"
            android:text="@string/strpost"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/sp15" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp420"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_sayit"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp47"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:background="@color/color_white"
                android:gravity="top"
                android:hint="SAY IT"
                android:padding="@dimen/dp8" />

            <com.ism.views.HorizontalListView
                android:id="@+id/horilistview"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp47"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/dp8"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tools"
            android:layout_width="@dimen/dp47"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/rl_main"
            android:background="@drawable/sidebar"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_keyboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_keyboard" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_link" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_video" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_audio" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_tool"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_tools" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_emoticons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_emoticons" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_bottompost"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bottompost"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_captureimg"
                android:layout_width="@dimen/dp187"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp98"
                android:layout_marginRight="@dimen/dp30"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_capture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_camera"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_capture"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp19" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chooseimg"
                android:layout_width="@dimen/dp187"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp98"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/imggallery" />

                <TextView
                    android:id="@+id/txt_choose"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp19" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_recordaudio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_bottompost"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp5"
                android:src="@drawable/audio_done" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.ism.views.CircularSeekBar
                    android:id="@+id/circularSeekBar"
                    android:layout_width="@dimen/dp187"
                    android:layout_height="@dimen/dp187"
                    android:layout_margin="@dimen/dp15"
                    android:padding="@dimen/dp15"
                    app:circle_color="@color/color_white"
                    app:circle_progress_color="#EA4A51"
                    app:circle_stroke_width="@dimen/dp2"
                    app:circle_x_radius="@dimen/dp60"
                    app:circle_y_radius="@dimen/dp60"
                    app:end_angle="90"
                    app:max="100"
                    app:pointer_alpha_ontouch="100"
                    app:pointer_color="#EA4A51"
                    app:pointer_halo_border_width="0dp"
                    app:pointer_halo_color="#00ffffff"
                    app:progress="0"
                    app:start_angle="90"
                    app:use_custom_radii="true" />

                <ImageView
                    android:id="@+id/img_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp8"
                android:src="@drawable/img_stop" />
        </LinearLayout>
    </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>