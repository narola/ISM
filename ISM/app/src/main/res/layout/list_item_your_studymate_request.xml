<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:background="@android:color/white">

	<View
		android:id="@+id/view_status"
		android:layout_width="@dimen/status_ring_size"
		android:layout_height="@dimen/status_ring_size"
		android:layout_centerVertical="true"
		android:layout_marginLeft="10dp"/>

    <com.ism.views.CircleImageView
        android:id="@+id/img_dp"
        android:layout_width="@dimen/dp_size_list_studymates"
        android:layout_height="@dimen/dp_size_list_studymates"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/view_status"
        android:src="@drawable/userdp"/>

	<TextView
		android:id="@+id/txt_user_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/img_dp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="20dp"
		android:textColor="@color/bg_app_dark"
		android:textSize="20sp"/>
</RelativeLayout>