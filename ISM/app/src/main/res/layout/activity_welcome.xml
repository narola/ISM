<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_welcome">

	<com.ism.commonsource.view.ActionProcessButton
		android:id="@+id/prog_welcome"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_progress"
		android:visibility="invisible"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="@dimen/dp23"
			android:src="@drawable/img_welcome_to_ism"/>

		<TextView
			android:id="@+id/txt_welcome_msg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/color_text_light_green"
			android:textSize="@dimen/sp23"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="@dimen/dp23"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="vertical">

				<View
					android:layout_width="@dimen/dp225"
					android:layout_height="@dimen/dp1"
					android:layout_marginBottom="@dimen/dp2"
					android:background="@color/color_line_green"/>

				<View
					android:layout_width="@dimen/dp225"
					android:layout_height="@dimen/dp1"
					android:layout_marginTop="@dimen/dp2"
					android:background="@color/color_line_green"/>
			</LinearLayout>

			<com.ism.views.GIFView
				android:id="@+id/gif_book"
				android:layout_width="@dimen/dp75"
				android:layout_height="@dimen/dp75"
				android:layout_margin="@dimen/dp8"
				android:padding="@dimen/dp8"
				app:src="@drawable/loading3"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="vertical">

				<View
					android:layout_width="@dimen/dp225"
					android:layout_height="@dimen/dp1"
					android:layout_marginBottom="@dimen/dp2"
					android:background="@color/color_line_green"/>

				<View
					android:layout_width="@dimen/dp225"
					android:layout_height="@dimen/dp1"
					android:layout_marginTop="@dimen/dp2"
					android:background="@color/color_line_green"/>
			</LinearLayout>
		</LinearLayout>

		<TextView
			android:id="@+id/txt_tutorialgroup_"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/color_white"
			android:textSize="@dimen/dp23"/>
	</LinearLayout>
</RelativeLayout>