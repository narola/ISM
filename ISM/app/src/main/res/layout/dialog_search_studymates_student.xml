<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginBottom="@dimen/dp38"
              android:layout_marginLeft="@dimen/dp113"
              android:layout_marginRight="@dimen/dp98"
              android:layout_marginTop="@dimen/dp38"
              android:background="@android:color/white"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp53"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:background="@drawable/ic_search_active"/>

		<View
			android:layout_width="@dimen/dp1"
			android:layout_height="match_parent"
			android:background="@color/color_shade_news_feed"/>

		<EditText
			android:id="@+id/et_search_studymates"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:hint="@string/strsearchstudymatess"
			android:paddingLeft="@dimen/dp15"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp1"
		android:background="@color/color_shade_news_feed"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/rv_studymates_student"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_dialog_tag"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@color/green"
			android:gravity="center"
			android:paddingBottom="@dimen/dp8"
			android:paddingTop="@dimen/dp8"
			android:text="TAG"
			android:textAllCaps="true"
			android:textColor="@color/white"
			android:textSize="@dimen/dp30"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/tv_dialog_close"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/dp2"
			android:layout_weight="1"
			android:background="@color/green"
			android:gravity="center"
			android:paddingBottom="@dimen/dp8"
			android:paddingTop="@dimen/dp8"
			android:text="@string/strclose"
			android:textAllCaps="true"
			android:textColor="@color/white"
			android:textSize="@dimen/dp30"
			android:textStyle="bold"/>
	</LinearLayout>
</LinearLayout>