<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp300"
    android:layout_height="@dimen/dp330"
    android:layout_gravity="center"
    android:background="@drawable/bg_about_me"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_pastimes_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp2"
        android:layout_marginRight="@dimen/dp2"
        android:layout_marginTop="@dimen/dp2"
        android:background="@color/green"
        android:gravity="center"
        android:padding="@dimen/dp8"
        android:text="Pastimes Details"
        android:textColor="@color/white"
        android:textSize="@dimen/sp19" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pastimes_details"
        android:layout_above="@+id/txt_done"
        android:layout_margin="@dimen/dp8"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_image"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp150"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/dp8"
            android:background="@drawable/bg_white_border_gray"
            android:src="@drawable/img_no_cover_available" />

        <TextView
            android:id="@+id/txt_pastimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/dp4"
            android:text="@string/strPastTimes"
            android:textColor="@color/bg_app_dark"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/txt_pastimes_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/dp4"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp4"
        android:background="@drawable/bg_button_green"
        android:gravity="center"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp19"
        android:paddingRight="@dimen/dp19"
        android:paddingTop="@dimen/dp8"
        android:text="@string/strclose"
        android:textColor="@color/white"
        android:textSize="@dimen/sp15" />
</RelativeLayout>