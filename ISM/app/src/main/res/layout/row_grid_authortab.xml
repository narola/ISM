<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_assessment_box">


    <LinearLayout
        android:id="@+id/ll_officetab"
        android:layout_width="@dimen/author_tab_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_officetab_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp38"
            android:background="@drawable/my_desk_title"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_officetab_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/my_desk_logo"
            android:drawablePadding="@dimen/dp11"
            android:gravity="center_vertical"
            android:padding="@dimen/sp11"
            android:singleLine="false"
            android:textSize="@dimen/sp15" />

    </LinearLayout>

</LinearLayout>
