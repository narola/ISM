<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/bg_popup_message"
		android:layout_marginTop="@dimen/dp9">

		<TextView
			android:id="@+id/txt_emptylist_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/no_request_available"
			android:textSize="@dimen/text_size_emptylist_message_small"
			android:layout_centerInParent="true"/>

		<ListView
			android:id="@+id/lv_studymates"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/btn_view_all"
			android:paddingBottom="@dimen/dp2"
			android:paddingTop="@dimen/dp2"
			android:dividerHeight="@dimen/dp2"
			android:divider="@drawable/divider_gray_with_padding"></ListView>

		<Button
			android:id="@+id/btn_view_all"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/dp32"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_margin="@dimen/dp11"
			android:background="@drawable/bg_button_green"
			android:paddingLeft="@dimen/dp30"
			android:paddingRight="@dimen/dp30"
			android:text="@string/view_all"
			android:textColor="@color/color_white"
			android:textSize="@dimen/sp14"
			android:visibility="gone"/>
	</RelativeLayout>

	<!--<View-->
		<!--android:layout_width="@dimen/d25dp"-->
		<!--android:layout_height="@dimen/d15dp"-->
		<!--android:layout_alignParentRight="true"-->
		<!--android:layout_marginRight="@dimen/d20dp"-->
		<!--android:background="@drawable/shape_triangle_message"/>-->
</RelativeLayout>