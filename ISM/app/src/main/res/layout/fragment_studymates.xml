<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:mContext=".fragment.userprofile.StudymatesFragment">

	<LinearLayout
		android:id="@+id/ll_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/txt_studymates"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textAllCaps="true"
			android:textSize="@dimen/d16sp"
			android:paddingTop="@dimen/d10dp"
			android:paddingBottom="@dimen/d10dp"
			android:paddingLeft="@dimen/d30dp"
			android:textColor="@drawable/txt_color_studymate_label"
			android:background="@drawable/bg_tab_studymate"
			android:text="@string/your_studymates"/>

		<TextView
			android:id="@+id/txt_find_studymates"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textAllCaps="true"
			android:textSize="@dimen/d16sp"
			android:paddingTop="@dimen/d10dp"
			android:paddingBottom="@dimen/d10dp"
			android:paddingLeft="@dimen/d30dp"
			android:textColor="@drawable/txt_color_studymate_label"
			android:background="@drawable/bg_tab_studymate"
			android:text="@string/find_more_studymates"/>
	</LinearLayout>

	<android.support.v4.view.ViewPager
		android:id="@+id/vp_studymates"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/ll_header"></android.support.v4.view.ViewPager>

	<!--<View-->
		<!--android:id="@+id/view_highlighter_triangle"-->
		<!--android:layout_width="20dp"-->
		<!--android:layout_height="30dp"-->
		<!--android:layout_marginTop="337dp"-->
		<!--android:layout_alignParentRight="true"-->
		<!--android:visibility="gone"-->
		<!--android:background="@drawable/shape_triangle_profile_controller" />-->
</RelativeLayout>
