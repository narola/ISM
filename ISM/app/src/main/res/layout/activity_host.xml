<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_controller_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controller_top_height"
        android:background="@drawable/bg_controller_top">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="match_parent"
            android:background="@drawable/bg_right_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="@dimen/controller_top_small_button_width"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_logo"
            android:background="@drawable/bg_right_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/img_home" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_search"
            android:layout_toRightOf="@id/img_home"
            android:gravity="center"
            android:textSize="@dimen/controller_top_menu_text_size"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_controller_top_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_search"
            android:layout_toRightOf="@id/img_home"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/controller_top_small_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/bg_right_controller_top_button"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/sp_submenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_back"
                android:visibility="gone"></Spinner>

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_back"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_one"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_two"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_three"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_four"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_controller_top_action"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_notes"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/controller_top_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/bg_left_controller_top_button"
                android:scaleType="centerInside"
                android:src="@drawable/img_search" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="@dimen/dp150"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp15"
                android:hint="@string/hint_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="@dimen/dp8"
                android:textSize="@dimen/sp14"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/gray_light"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_notes"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_profile_controller"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/img_notes" />

        <ImageView
            android:id="@+id/img_profile_controller"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_chat"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/img_study_mates" />

        <ImageView
            android:id="@+id/img_chat"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/img_chat" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_controller_left"
        android:layout_width="@dimen/controller_left_width"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tutorial"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_tutorial"
            android:scaleType="centerInside"
            android:src="@drawable/img_tutorial" />

        <ImageView
            android:id="@+id/img_office"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_classroom"
            android:scaleType="centerInside"
            android:src="@drawable/img_classroom" />

        <ImageView
            android:id="@+id/img_assessment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_assessment"
            android:scaleType="centerInside"
            android:src="@drawable/img_assessment" />

        <ImageView
            android:id="@+id/img_desk"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_desk"
            android:scaleType="centerInside"
            android:src="@drawable/img_desk" />

        <ImageView
            android:id="@+id/img_reportcard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_report_card"
            android:scaleType="centerInside"
            android:src="@drawable/img_report_card" />

        <ImageView
            android:id="@+id/img_logout"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="@dimen/controller_left_width"
            android:background="@drawable/bg_logout"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logout" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:layout_toLeftOf="@+id/fl_fragment_container_right"
        android:layout_toRightOf="@id/ll_controller_left"></FrameLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_container_right"
        android:layout_width="@dimen/content_right_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_controller_top"
        android:background="@android:color/darker_gray"></FrameLayout>

    <com.ism.commonsource.view.ActionProcessButton
        android:id="@+id/prog_host"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp4"
        android:visibility="invisible"/>
</RelativeLayout>
