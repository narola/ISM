<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.ism.views.CircleImageView
        android:id="@+id/img_dp"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:src="@drawable/img_default_dp"/>

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_dp"
        android:layout_marginRight="@dimen/dp4"
        android:layout_marginTop="@dimen/dp8"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/green"
        android:textSize="@dimen/sp13"/>

    <TextView
        android:id="@+id/txt_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_dp"
        android:layout_below="@id/txt_user_name"
        android:layout_marginRight="@dimen/dp4"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/bg_app_dark"
        android:textSize="@dimen/sp12"/>

    <TextView
        android:id="@+id/txt_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_dp"
        android:layout_below="@id/txt_school"
        android:layout_marginRight="@dimen/dp4"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/bg_app_dark"
        android:textSize="@dimen/sp12"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_course"
        android:layout_toRightOf="@id/img_dp"
        android:paddingBottom="@dimen/dp8"
        android:textColor="@color/text_gray"/>

	<Button
		android:id="@+id/btn_respond"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/dp26"
		android:layout_below="@id/txt_time"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/dp8"
		android:layout_marginBottom="@dimen/dp8"
		android:paddingLeft="@dimen/dp4"
		android:paddingRight="@dimen/dp4"
		android:textColor="@android:color/white"
		android:background="@drawable/bg_btn_dark"
		android:textAllCaps="false"
		android:gravity="center"
        android:textSize="@dimen/sp12"
		android:text="@string/respond_to_request"/>
</RelativeLayout>