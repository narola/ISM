<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:mContext=".fragment.userprofile.MyFeedsFragment">

	<include android:id="@+id/rl_new_post"
	         layout="@layout/layout_new_post"/>

	<TextView
		android:id="@+id/txt_emptylist_message"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/no_feeds_available"
		android:textSize="@dimen/text_size_emptylist_message_large"
		android:visibility="gone"
		android:layout_centerInParent="true"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/recycler_post"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/rl_new_post">
	</android.support.v7.widget.RecyclerView>

