<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:mContext="com.ism.fragment.myAuthor.MyAuthorsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp53"
        android:layout_alignParentTop="true"
        android:id="@+id/rr_find_more"
        android:background="@drawable/shadow_separator"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_find_more_author"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_normal"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp5"
            android:background="@drawable/bg_btn_blue"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="@string/strFindMoreAuthors"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp5" />

        <TextView
            android:id="@+id/txt_empty_view"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/dp53"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp26"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>
