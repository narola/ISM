<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:mContext="com.ism.fragment.myAuthor.MyAuthorsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp53"
        android:layout_alignParentTop="true"
        android:id="@+id/rr_find_more"
        android:background="@drawable/shadow_separator"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_find_more_author"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_normal"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp5"
            android:background="@drawable/bg_btn_blue"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text="@string/strFindMoreAuthors"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/ic_bg_my_author"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp5" />

        <TextView
            android:id="@+id/txt_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp26"
            android:text="@string/strYourHaveNotJoinedAnyAuthorClickFindMoreAuthorAndAddAuthor"
            android:visibility="visible"
            android:gravity="center"
            android:textColor="@color/bg_app_dark"
            android:layout_marginLeft="@dimen/dp143"
            android:layout_marginRight="@dimen/dp143"
            android:layout_marginTop="@dimen/dp98"
            android:layout_below="@+id/recyclerview"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_find_author"
            android:id="@+id/imageView2"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginRight="@dimen/dp55"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/txt_empty_view" />
    </RelativeLayout>


</LinearLayout>
