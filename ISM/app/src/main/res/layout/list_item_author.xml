<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/row_width_author"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp8"
    android:layout_marginLeft="@dimen/dp4"
    android:layout_marginRight="@dimen/dp4"
    android:layout_marginTop="@dimen/dp8"
    android:background="@drawable/bg_user_books"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/author_image_height"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dp5"
        android:scaleType="centerCrop"
         />

    <ImageView
        android:id="@+id/img_author_info"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_pic"
        android:layout_alignParentTop="true"
        android:src="@drawable/img_i" />

    <RelativeLayout
        android:id="@+id/rr_add_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_pic"
        android:background="#10ffffff">

        <ImageView
            android:id="@+id/img_add_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp8"
            android:src="@drawable/img_like_red"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_pic"
        android:layout_marginBottom="@dimen/dp4"
        android:layout_marginLeft="@dimen/dp4"
        android:layout_marginRight="@dimen/dp4"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp2">

        <TextView
            android:id="@+id/txt_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:padding="@dimen/dp1"
            android:text="Author Name"
            android:textColor="@color/cpb_red"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/txt_total_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_author_name"
            android:background="@color/white"
            android:ellipsize="end"
            android:lines="1"
            android:padding="@dimen/dp1"
            android:text="Total books"
            android:textSize="@dimen/sp11" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:id="@+id/img_menu"
            android:layout_alignParentEnd="true"
            android:background="@color/pink" />
    </RelativeLayout>
</RelativeLayout>