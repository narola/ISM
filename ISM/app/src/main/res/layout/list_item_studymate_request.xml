<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.ism.views.CircleImageView
        android:id="@+id/img_dp"
        android:layout_width="@dimen/dp_size_list_notification"
        android:layout_height="@dimen/dp_size_list_notification"
        android:layout_margin="@dimen/d10dp"
        android:src="@drawable/img_default_dp"/>

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_dp"
        android:layout_marginTop="@dimen/d10dp"
        android:layout_marginRight="@dimen/d5dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/green"
        android:textSize="@dimen/d17sp"/>

    <TextView
        android:id="@+id/txt_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_dp"
        android:layout_below="@id/txt_user_name"
        android:layout_marginRight="@dimen/d5dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/bg_app_dark"
        android:textSize="@dimen/d16sp"/>

    <TextView
        android:id="@+id/txt_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_dp"
        android:layout_below="@id/txt_school"
        android:layout_marginRight="@dimen/d5dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/bg_app_dark"
        android:textSize="@dimen/d16sp"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_course"
        android:layout_toRightOf="@id/img_dp"
        android:paddingBottom="@dimen/d10dp"
        android:textColor="@color/text_gray"/>

    <Button
	    android:id="@+id/btn_respond"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/d38dp"
	    android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
	    android:layout_margin="@dimen/d10dp"
	    android:paddingLeft="@dimen/d10dp"
	    android:paddingRight="@dimen/d10dp"
	    android:textColor="@android:color/white"
	    android:background="@drawable/bg_btn_dark"
	    android:textAllCaps="false"
	    android:textSize="@dimen/d16sp"
	    android:gravity="center"
	    android:text="@string/respond_to_request"/>
</RelativeLayout>