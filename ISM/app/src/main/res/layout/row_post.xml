<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d15dp"
        android:layout_marginRight="@dimen/d15dp"
        android:orientation="horizontal">

        <com.ism.helper.CircleImageView

            android:id="@+id/img_dp_post_creator"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/d15dp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/d10dp"
            android:src="@drawable/userdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10dp"
                android:text="Emma Mall"
                android:textColor="@color/color_black"
                android:textSize="@dimen/d25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="4"
                android:padding="@dimen/d10dp"
                android:text="@string/strsentence"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/d18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/like" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/d10dp"
                    android:text="23"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/comment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/d10dp"
                    android:text="7"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="@dimen/d10dp"
                    android:text="View All"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/d18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/friend" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/raw_list_comments"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginLeft="@dimen/d15dp"

        android:layout_marginRight="@dimen/d15dp" />

    <EditText
        android:id="@+id/et_writePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d10dp"
        android:layout_marginLeft="@dimen/d15dp"
        android:layout_marginRight="@dimen/d15dp"
        android:layout_marginTop="@dimen/d10dp"
        android:background="@drawable/selector"
        android:hint="@string/strwriteyourcommenthere"
        android:padding="15sp"
        android:textColorHint="@color/color_text_hint" />
</LinearLayout>