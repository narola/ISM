<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/studymate_tab_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d10dp">

        <TextView
            android:id="@+id/txt_read_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:padding="@dimen/d5dp"
            android:text="@string/strBooksYouMayWantToRead"
            android:textColor="@color/bg_app_dark"
            android:textSize="@dimen/d20sp" />

        <ImageView
            android:id="@+id/img_filter_read_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/line1"
            android:src="@drawable/img_filter" />

        <TextView
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="@dimen/d40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_search_suggested"
            android:background="@color/color_text_hint" />

        <LinearLayout
            android:id="@+id/ll_search_suggested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search_suggested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/img_search_gray" />

            <EditText
                android:id="@+id/et_search_suggested"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:hint="@string/hint_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/color_graylight"
                android:visibility="gone" />
        </LinearLayout>
        <!--<ImageView-->
        <!--android:id="@+id/img_search_read_books"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@drawable/img_search" />-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_prev_read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:padding="@dimen/d5dp"
            android:src="@drawable/left_arrow" />

        <com.ism.views.HorizontalListView
            android:id="@+id/lv_suggested_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/d5dp"
            android:layout_marginRight="@dimen/d5dp"
            android:layout_toLeftOf="@+id/img_next_read"
            android:layout_toRightOf="@+id/img_prev_read"
            android:background="@color/color_white" />

        <TextView
            android:id="@+id/txt_suggested_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_next_read"
            android:layout_toRightOf="@+id/img_prev_read"
            android:background="@color/color_white"
            android:gravity="center"
            android:text="No record found"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_next_read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/d5dp"
            android:src="@drawable/right_arrow" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/studymate_tab_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d10dp">

        <TextView
            android:id="@+id/txt_fav_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:padding="@dimen/d5dp"
            android:text="@string/strYourFavouriteBooks"
            android:textColor="@color/bg_app_dark"
            android:textSize="@dimen/d20sp" />

        <ImageView
            android:id="@+id/img_filter_fav_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/line2"
            android:src="@drawable/img_filter" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="1dp"
            android:layout_height="@dimen/d40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_search_fav"
            android:background="@color/color_text_hint" />

        <LinearLayout
            android:id="@+id/ll_search_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/img_search_gray" />

            <EditText
                android:id="@+id/et_search_fav"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:hint="@string/hint_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/color_graylight"
                android:visibility="gone" />
        </LinearLayout>
        <!--<ImageView-->
        <!--android:id="@+id/img_search_fav"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@drawable/img_search_gray" />-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_prev_fav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:padding="@dimen/d5dp"
            android:src="@drawable/left_arrow" />

        <com.ism.views.HorizontalListView
            android:id="@+id/lv_fav_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/d5dp"
            android:layout_marginRight="@dimen/d5dp"
            android:layout_toLeftOf="@+id/img_next_fav"
            android:layout_toRightOf="@+id/img_prev_fav"
            android:background="@color/color_white" />

        <TextView
            android:id="@+id/txt_fav_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_next_fav"
            android:layout_toRightOf="@+id/img_prev_fav"
            android:background="@color/color_white"
            android:gravity="center"
            android:text="No record found"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_next_fav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/d5dp"
            android:src="@drawable/right_arrow" />


    </RelativeLayout>
</LinearLayout>