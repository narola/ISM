<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:mContext=".fragment.tutorialGroup.TutorialDiscussionFragment">

	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:background="@color/bg_discussion"
		android:layout_weight="7">

		<RelativeLayout
			android:id="@+id/rl_topic"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/green">

			<TextView
				android:id="@+id/txt_topic_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAllCaps="true"
				android:textColor="@android:color/white"
				android:layout_centerInParent="true"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/txt_topic"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/topic"
				android:layout_toLeftOf="@id/txt_topic_value"
				android:layout_centerVertical="true"
				android:textAllCaps="true"
				android:textColor="@android:color/white"
				android:textSize="14sp"/>

			<ImageView
				android:id="@+id/img_expand_discussion"
				android:layout_width="wrap_content"
				android:layout_height="25dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:src="@drawable/ic_expand_discussion"
				android:layout_marginRight="5dp"/>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rl_admin_notice"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/rl_topic"
			android:padding="5dp"
			android:background="@drawable/bg_white_border_bottom_shadowed">

			<com.ism.views.CircleImageView
				android:id="@+id/img_admin_dp"
				android:layout_width="@dimen/dp_size_list_small"
				android:layout_height="@dimen/dp_size_list_small"
				android:layout_marginBottom="10dp"
				android:src="@drawable/img_default_dp"/>

			<TextView
				android:id="@+id/txt_admin_name"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_toRightOf="@id/img_admin_dp"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"
				android:text="@string/admin"
				android:textSize="@dimen/text_size_small_chat"/>

			<TextView
				android:id="@+id/txt_admin_notice_time"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/img_admin_dp"
				android:layout_below="@id/txt_admin_name"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="10dp"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"
				android:textSize="@dimen/text_size_small_chat"/>

			<TextView
				android:id="@+id/txt_admin_notice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/txt_admin_name"
				android:layout_marginBottom="10dp"
				android:maxLines="2"
				android:ellipsize="end"
				android:textColor="@color/bg_app_dark"
				android:background="@drawable/bg_chat_received_admin"
				android:textSize="@dimen/text_size_normal_chat"/>
		</RelativeLayout>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_chat"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/rl_admin_notice"
			android:layout_above="@+id/ll_attachments"></android.support.v7.widget.RecyclerView>

		<TextView
			android:id="@+id/txt_empty_list_msg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="20sp"
			android:gravity="center"
			android:text="@string/no_messages_found"
			android:visibility="gone"/>
		
		<TextView
			android:id="@+id/txt_alert"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_above="@+id/ll_attachments"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:gravity="center"
			android:textColor="@color/orange"
			android:background="@drawable/bg_text_alert"
			android:textSize="16sp"
			android:text="@string/msg_active_hours_finished"
			android:visibility="gone"/>

		<LinearLayout
			android:id="@+id/ll_attachments"
			android:layout_width="match_parent"
			android:layout_height="@dimen/attachment_button_height"
			android:layout_above="@+id/ll_message"
			android:background="@color/green"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/img_attach_file"
				android:layout_width="@dimen/attachment_button_width"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:scaleType="centerInside"
				android:src="@drawable/ic_attach_file"/>

			<ImageView
				android:id="@+id/img_attach_image"
				android:layout_width="@dimen/attachment_button_width"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:scaleType="centerInside"
				android:src="@drawable/ic_attach_image"/>

			<ImageView
				android:id="@+id/img_attach_audio"
				android:layout_width="@dimen/attachment_button_width"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:scaleType="centerInside"
				android:src="@drawable/ic_attach_audio"/>

			<ImageView
				android:id="@+id/img_attach_link"
				android:layout_width="@dimen/attachment_button_width"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:scaleType="centerInside"
				android:src="@drawable/ic_attach_link"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layoutDirection="rtl"
			android:padding="5dp"
			android:layout_alignParentBottom="true">

			<Button
				android:id="@+id/btn_send"
				android:layout_width="wrap_content"
				android:layout_height="40dp"
				android:background="@drawable/bg_btn_dark"
				android:textSize="18sp"
				android:paddingLeft="20dp"
				android:paddingRight="20dp"
				android:text="@string/send"
				android:layout_gravity="bottom"
				android:textColor="@color/white"/>

			<EditText
				android:id="@+id/et_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textMultiLine"
				android:gravity="start"
				android:hint="@string/say_it"
				android:layout_margin="5dp"
				android:background="@android:color/transparent"
				android:textSize="18sp"
				android:textColor="@color/bg_app_dark"
				android:maxLines="3"/>
		</LinearLayout>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rl_utility"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="4"
		android:background="@color/bg_app_dark">

		<com.ism.scientificcalc.view.Calc
			android:id="@+id/utility_scientific_calc"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/ll_controller_utility"></com.ism.scientificcalc.view.Calc>

		<ViewStub
			android:id="@+id/vs_whiteboard"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/layout_whiteboard"
			android:inflatedId="@+id/utility_whiteboard"
			android:layout_marginLeft="1dp"
			android:layout_above="@+id/ll_controller_utility"></ViewStub>

		<ViewStub
			android:id="@+id/vs_assistant_webview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/layout_assistant_webview"
			android:inflatedId="@+id/utility_assistant_webview"
			android:layout_marginLeft="1dp"
			android:layout_above="@+id/ll_controller_utility"></ViewStub>

		<LinearLayout
			android:id="@+id/ll_controller_utility"
			android:layout_width="match_parent"
			android:layout_height="@dimen/controller_utility_height"
			android:background="@color/bg_app_dark"
			android:layout_alignParentBottom="true">

			<ImageView
				android:id="@+id/img_utility_calc"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/img_utility_calc"/>

			<ImageView
				android:id="@+id/img_utility_whiteboard"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/img_utility_whiteboard"/>

			<ImageView
				android:id="@+id/img_utility_search"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/img_utility_search"/>

			<ImageView
				android:id="@+id/img_utility_dictionary"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/img_utility_dictionary"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
