<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:mContext=".fragment.tutorialGroup.TutorialDiscussionFragment">

	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:background="@color/bg_discussion"
		android:layout_weight="7">

		<LinearLayout
			android:id="@+id/ll_topic"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/green"
			android:gravity="center"
			android:orientation="horizontal"
			android:padding="5dp">

			<TextView
				android:id="@+id/txt_topic"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/topic"
				android:textAllCaps="true"
				android:textColor="@android:color/white"
				android:textSize="20sp"/>

			<TextView
				android:id="@+id/txt_topic_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAllCaps="true"
				android:textColor="@android:color/white"
				android:textSize="20sp"/>
		</LinearLayout>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_chat"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/ll_attachments"
			android:layout_below="@id/ll_topic"></android.support.v7.widget.RecyclerView>

		<TextView
			android:id="@+id/txt_alert"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_above="@+id/ll_attachments"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:gravity="center"
			android:textColor="@color/orange"
			android:background="@drawable/bg_text_alert"
			android:textSize="16sp"
			android:text="@string/msg_active_hours_finished"
			android:visibility="gone"/>

		<LinearLayout
			android:id="@+id/ll_attachments"
			android:layout_width="match_parent"
			android:layout_height="@dimen/attachment_button_height"
			android:layout_above="@+id/ll_message"
			android:background="@color/green"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/img_attach_file"
				android:layout_width="@dimen/attachment_button_width"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:scaleType="centerInside"
				android:src="@drawable/ic_attach_file"/>

			<ImageView
				android:id="@+id/img_attach_image"
				android:layout_width="@dimen/attachment_button_width"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:scaleType="centerInside"
				android:src="@drawable/ic_attach_image"/>

			<ImageView
				android:id="@+id/img_attach_audio"
				android:layout_width="@dimen/attachment_button_width"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:scaleType="centerInside"
				android:src="@drawable/ic_attach_audio"/>

			<ImageView
				android:id="@+id/img_attach_link"
				android:layout_width="@dimen/attachment_button_width"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:scaleType="centerInside"
				android:src="@drawable/ic_attach_link"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_message"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layoutDirection="rtl"
			android:padding="5dp"
			android:layout_alignParentBottom="true">

			<Button
				android:id="@+id/btn_send"
				android:layout_width="wrap_content"
				android:layout_height="40dp"
				android:background="@drawable/bg_btn_dark"
				android:textSize="18sp"
				android:paddingLeft="20dp"
				android:paddingRight="20dp"
				android:text="@string/send"
				android:layout_gravity="bottom"
				android:textColor="@color/white"/>

			<EditText
				android:id="@+id/et_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textMultiLine"
				android:gravity="start"
				android:hint="@string/type_message"
				android:layout_margin="5dp"
				android:background="@android:color/transparent"
				android:textSize="18sp"
				android:textColor="@color/bg_app_dark"
				android:maxLines="3"/>
		</LinearLayout>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="4">

		<com.ism.scientificcalc.view.Calc
			android:id="@+id/utility_scientific_calc"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/ll_controller_utility"></com.ism.scientificcalc.view.Calc>

		<ViewStub
			android:id="@+id/vs_whiteboard"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/layout_whiteboard"
			android:inflatedId="@+id/utility_whiteboard"
			android:layout_above="@+id/ll_controller_utility"></ViewStub>

		<ViewStub
			android:id="@+id/vs_assistant_webview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout="@layout/layout_assistant_webview"
			android:inflatedId="@+id/utility_assistant_webview"
			android:layout_above="@+id/ll_controller_utility"></ViewStub>

		<LinearLayout
			android:id="@+id/ll_controller_utility"
			android:layout_width="match_parent"
			android:layout_height="@dimen/controller_utility_height"
			android:background="@color/bg_app_dark"
			android:layout_alignParentBottom="true">

			<ImageView
				android:id="@+id/img_utility_calc"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/img_utility_calc"/>

			<ImageView
				android:id="@+id/img_utility_whiteboard"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/img_utility_whiteboard"/>

			<ImageView
				android:id="@+id/img_utility_search"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/img_utility_search"/>

			<ImageView
				android:id="@+id/img_utility_dictionary"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/img_utility_dictionary"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
