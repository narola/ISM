<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollViewl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/studymate_tab_bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp8">

                <TextView
                    android:id="@+id/txt_read_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/strBooksYouMayWantToRead"
                    android:textColor="@color/bg_app_dark"
                    android:textSize="@dimen/sp15" />

                <!--<ImageView-->
                <!--android:id="@+id/img_filter_read_books"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toLeftOf="@+id/line1"-->
                <!--android:src="@drawable/img_filter" />-->

                <!--<TextView-->
                <!--android:id="@+id/line1"-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="@dimen/d40dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toLeftOf="@+id/ll_search_suggested"-->
                <!--android:background="@color/color_text_hint" />-->

                <LinearLayout
                    android:id="@+id/ll_search_suggested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_search_suggested"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_search_gray" />

                    <EditText
                        android:id="@+id/et_search_suggested"
                        android:layout_width="@dimen/dp150"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp15"
                        android:hint="@string/hint_search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:textSize="@dimen/sp14"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/border_gray"
                        android:visibility="gone" />
                </LinearLayout>
                <!--<ImageView-->
                <!--android:id="@+id/img_search_read_books"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:src="@drawable/selector_search" />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp180"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_prev_suggested"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/img_previous" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lv_suggested_books"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp4"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_toLeftOf="@+id/img_next_suggested"
                    android:layout_toRightOf="@+id/img_prev_suggested"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/txt_suggested_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/img_next_suggested"
                    android:layout_toRightOf="@+id/img_prev_suggested"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_emptylist_message_medium"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_next_suggested"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/img_next" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/studymate_tab_bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp8">

                <TextView
                    android:id="@+id/txt_fav_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/strYourFavouriteBooks"
                    android:textColor="@color/bg_app_dark"
                    android:textSize="@dimen/sp15" />

                <!--<ImageView-->
                <!--android:id="@+id/img_filter_fav_books"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toLeftOf="@+id/line2"-->
                <!--android:src="@drawable/img_filter" />-->

                <!--<TextView-->
                <!--android:id="@+id/line2"-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="@dimen/d40dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toLeftOf="@+id/ll_search_fav"-->
                <!--android:background="@color/color_text_hint" />-->

                <LinearLayout
                    android:id="@+id/ll_search_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_search_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_search_gray" />

                    <EditText
                        android:id="@+id/et_search_fav"
                        android:layout_width="@dimen/dp150"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp15"
                        android:hint="@string/hint_search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:textSize="@dimen/sp14"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/border_gray"
                        android:visibility="gone" />
                </LinearLayout>
                <!--<ImageView-->
                <!--android:id="@+id/img_search_fav"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:src="@drawable/img_search_gray" />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp180"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_prev_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/img_previous" />

                <!--<com.ism.views.HorizontalListView-->
                <!--android:id="@+id/lv_fav_books"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_marginLeft="@dimen/d5dp"-->
                <!--android:layout_marginRight="@dimen/d5dp"-->
                <!--android:layout_toLeftOf="@+id/img_next_fav"-->
                <!--android:layout_toRightOf="@+id/img_prev_fav"-->
                <!--android:background="@color/color_white" />-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lv_fav_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp4"
                    android:layout_marginRight="@dimen/dp4"
                    android:layout_toLeftOf="@+id/img_next_fav"
                    android:layout_toRightOf="@+id/img_prev_fav"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/txt_fav_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/img_next_fav"
                    android:layout_toRightOf="@+id/img_prev_fav"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_emptylist_message_medium"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_next_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/img_next" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>