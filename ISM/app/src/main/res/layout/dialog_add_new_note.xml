<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp225"
    android:layout_height="@dimen/dp135"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_add_new_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="left"
        android:padding="@dimen/dp8"
        android:text="@string/steAddnewCategory"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp19"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_save_transparent"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_add_new_category"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:layout_marginTop="@dimen/dp23"
        android:textSize="@dimen/sp14"
        android:background="@drawable/bg_edit_gray"
        android:hint="@string/strEnterYourCategoryName"
        android:padding="@dimen/dp8"
        android:singleLine="true" />
</RelativeLayout>