<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_add_new_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="left"
        android:padding="@dimen/d10dp"
        android:text="@string/steAddnewCategory"
        android:textColor="@color/color_white"
        android:textSize="@dimen/d25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/d5dp"
        android:background="@drawable/edit_profile"
        android:gravity="center"
        android:text="@string/strclose"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/d40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_add_new_category"
        android:layout_marginLeft="@dimen/d10dp"
        android:layout_marginRight="@dimen/d10dp"
        android:layout_marginTop="@dimen/d30dp"
        android:background="@drawable/bg_edit_gray"
        android:hint="Enter your category name"
        android:padding="@dimen/d10dp"
        android:singleLine="true" />
</RelativeLayout>