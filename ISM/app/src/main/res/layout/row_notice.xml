<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_noticeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/d5dp"
        android:text=""
        android:textColor="#313131"
        android:textSize="@dimen/d20dp" />

    <TextView
        android:id="@+id/txt_noticeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d5dp"
        android:layout_marginRight="@dimen/d5dp"
        android:ellipsize="end"
        android:lines="5"
        android:paddingLeft="@dimen/d10dp"
        android:paddingRight="10sp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_noticeReadMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d5dp"
        android:gravity="right"
        android:padding="5dp"
        android:text="@string/read_more"
        android:textColor="@color/green"
        android:textSize="@dimen/d15dp" />
</LinearLayout>