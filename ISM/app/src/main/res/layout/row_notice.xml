<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160sp"

    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_noticeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        android:textColor="#6b6b6b"
        android:textSize="@dimen/d20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_noticeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d5dp"
        android:layout_marginRight="@dimen/d5dp"
        android:ellipsize="end"
        android:lines="5"
        android:paddingLeft="@dimen/d10dp"
        android:paddingRight="10sp"
        android:text=""
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_noticeReadMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d5dp"
        android:gravity="right"
        android:padding="5dp"
        android:text="Read more"
        android:textColor="@color/color_green"
        android:textSize="@dimen/d15dp"
        android:visibility="gone" />

