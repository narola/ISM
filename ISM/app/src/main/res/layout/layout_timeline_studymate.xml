<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

	<com.ism.views.CircleImageView
		android:id="@+id/img_dp"
		android:layout_width="@dimen/dp_size_timeline"
		android:layout_height="@dimen/dp_size_timeline"
		android:layout_marginRight="@dimen/dp8"
		android:src="@drawable/img_default_dp"/>

	<TextView
		android:id="@+id/txt_user_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/sp14"
		android:layout_marginTop="@dimen/dp2"
		android:textColor="@color/bg_app_dark"
		android:layout_toRightOf="@id/img_dp"/>

	<TextView
		android:id="@+id/txt_school"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/img_dp"
		android:layout_below="@id/txt_user_name"
		android:textSize="@dimen/sp12"
		android:textColor="@color/bg_app_dark"/>

	<TextView
		android:id="@+id/txt_following"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/img_dp"
		android:layout_below="@id/txt_school"
		android:textSize="@dimen/sp11"
		android:textColor="@color/green"/>
</RelativeLayout>