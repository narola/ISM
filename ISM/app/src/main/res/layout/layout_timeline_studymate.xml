<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_border_gray"
                android:orientation="vertical">

	<com.ism.views.CircleImageView
		android:id="@+id/img_dp"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_margin="10dp"
		android:src="@drawable/userdp"/>

	<TextView
		android:id="@+id/txt_user_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:textColor="@color/bg_app_dark"
		android:layout_toRightOf="@id/img_dp"/>

	<TextView
		android:id="@+id/txt_school"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:textColor="@color/bg_app_dark"
		android:layout_toRightOf="@id/img_dp"/>

	<TextView
		android:id="@+id/txt_following"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		android:textColor="@color/color_green"
		android:layout_toRightOf="@id/img_dp"/>
</RelativeLayout>