<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp600"
    android:layout_height="@dimen/dp375"
    android:layout_gravity="center"
    android:background="@drawable/bg_about_me"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_role_model_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp2"
        android:layout_marginRight="@dimen/dp2"
        android:layout_marginTop="@dimen/dp2"
        android:background="@color/green"
        android:gravity="center"
        android:padding="@dimen/dp8"
        android:text="@string/strRoleModelDetails"
        android:textColor="@color/white"
        android:textSize="@dimen/sp19" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_done"
        android:layout_below="@+id/txt_role_model_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_image"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="@dimen/dp150"
                    android:layout_margin="@dimen/dp8"
                    android:background="@drawable/bg_white_border_gray"
                    android:src="@drawable/img_no_cover_available" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_role_models"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text="@string/strRoleModel"
                        android:textColor="@color/bg_app_dark"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/txt_role_models_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/txt_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text="@string/strBirthdate"
                        android:textColor="@color/bg_app_dark"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/txt_birthdate_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/txt_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text="@string/strEducation"
                        android:textColor="@color/bg_app_dark"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/txt_education_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textSize="@dimen/sp14" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp8"
                    android:layout_marginRight="@dimen/dp8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_organization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text="@string/strOrganization"
                        android:textColor="@color/bg_app_dark"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/txt_organization_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/txt_achievements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text="@string/strAchivements"
                        android:textColor="@color/bg_app_dark"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/txt_achievements_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/txt_quotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text="@string/strQuotes"
                        android:textColor="@color/bg_app_dark"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/txt_quotes_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/txt_activities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text="@string/strActivities"
                        android:textColor="@color/bg_app_dark"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/txt_activities_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textSize="@dimen/sp14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginRight="@dimen/dp8"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/dp4"
                    android:text="@string/strDescription"
                    android:textColor="@color/bg_app_dark"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/txt_desc_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/dp4"
                    android:text="Details"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/txt_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp4"
        android:background="@drawable/bg_button_green"
        android:gravity="center"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp19"
        android:paddingRight="@dimen/dp19"
        android:paddingTop="@dimen/dp8"
        android:text="@string/strclose"
        android:textColor="@color/white"
        android:textSize="@dimen/sp15" />
</RelativeLayout>