<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.ism.views.CircleImageView
        android:id="@+id/img_dp"
        android:layout_width="@dimen/dp_size_list_notification"
        android:layout_height="@dimen/dp_size_list_notification"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:src="@drawable/img_default_dp"/>

	<View
		android:id="@+id/view_status"
		android:layout_width="@dimen/status_ring_size"
		android:layout_height="@dimen/status_ring_size"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"/>

	<TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_dp"
        android:layout_toLeftOf="@id/view_status"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginRight="@dimen/dp4"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/bg_app_dark"
        android:textSize="@dimen/sp13"/>

	<TextView
        android:id="@+id/txt_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_dp"
        android:layout_toLeftOf="@id/view_status"
        android:layout_below="@id/txt_user_name"
        android:layout_marginRight="@dimen/dp4"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/bg_app_dark"
        android:textSize="@dimen/sp12"/>
</RelativeLayout>