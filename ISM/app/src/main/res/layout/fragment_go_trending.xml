<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="horizontal"
    tools:mContext="com.ism.fragment.myAuthor.goTrending.GoTrendingFragment">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rr_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_separator_bg_white">

            <TextView
                android:id="@+id/txt_question_tending"
                android:layout_width="match_parent"
                android:layout_height="@dimen/trending_tab_height"
                android:layout_marginRight="@dimen/dp10"
                android:gravity="center"
                android:text="@string/strQuestionTrendingForThisWeek"
                android:textColor="@color/bg_app_dark"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp2"
                android:padding="@dimen/dp2"
                android:text="Past"
                android:textColor="@color/red" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/rr_tittle" />

        <com.ism.views.CirclePageIndicator
            android:id="@+id/indicator"
            style="@style/StyledIndicators"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewpager"
            android:layout_margin="@dimen/dp10"
            android:padding="@dimen/dp5"
            app:fillColor="@color/color_answer"
            app:pageColor="@color/text_gray"
            app:radius="@dimen/dp5"
            app:strokeColor="@color/text_gray" />

    </RelativeLayout>

    <TextView
        android:layout_width="@dimen/dp2"
        android:layout_height="match_parent"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_question_for" />
        <!--<include-->
        <!--layout="@layout/list_item_send_question_author"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_below="@+id/txt_question_for"-->
        <!--android:layout_alignParentStart="true" />-->
        <TextView
            android:id="@+id/txt_question_for"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trending_tab_height"
            android:background="@drawable/bg_white_border_gray"
            android:gravity="center"
            android:text="@string/strSendQuestionTo"
            android:textColor="@color/bg_app_dark"
            android:textSize="@dimen/sp16" />
        <!--<include-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/txt_question_for" />-->
    </RelativeLayout>

</LinearLayout>