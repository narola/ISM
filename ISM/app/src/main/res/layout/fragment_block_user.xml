<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:mContext="com.ism.fragment.userProfile.BlockUserFragment">

    <TextView
        android:id="@+id/txt_block_studymates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_highscore_subject"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:paddingTop="@dimen/dp8"
        android:text="@string/strBlockStudymatesRequest"
        android:textColor="#323232"
        android:textSize="@dimen/sp17" />

    <RelativeLayout
        android:id="@+id/rl_block_studymates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_block_studymates"
        android:layout_margin="@dimen/dp11"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_notification_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dp2"
            android:layout_marginLeft="@dimen/dp4"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/sp15" />

