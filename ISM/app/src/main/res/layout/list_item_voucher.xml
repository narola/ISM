<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

	<TextView
		android:id="@+id/txt_voucher_code"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:paddingTop="@dimen/padding_voucher_item"
		android:paddingBottom="@dimen/padding_voucher_item"
		android:gravity="center"
		android:textColor="@color/color_red"
		android:textSize="@dimen/d18sp"/>

	<View
		android:layout_width="@dimen/d1dp"
		android:layout_height="match_parent"
	    android:background="@color/color_dark_gray"/>

	<TextView
		android:id="@+id/txt_voucher_date"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:paddingTop="@dimen/padding_voucher_item"
		android:paddingBottom="@dimen/padding_voucher_item"
		android:gravity="center"
		android:textColor="@color/color_blue"
		android:textSize="@dimen/d18sp"/>

	<View
		android:layout_width="@dimen/d1dp"
		android:layout_height="match_parent"
		android:background="@color/color_dark_gray"/>

	<TextView
		android:id="@+id/txt_voucher_amount"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:paddingTop="@dimen/padding_voucher_item"
		android:paddingBottom="@dimen/padding_voucher_item"
		android:gravity="center"
		android:textColor="@color/green"
		android:textSize="@dimen/d18sp"/>
</LinearLayout>