<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:background="@drawable/bg_white_border_gray">

	<TextView
		android:id="@+id/txt_notice_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="10dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:paddingBottom="5dp"
		android:textColor="@color/color_green"
		android:textSize="18sp"/>

	<TextView
		android:id="@+id/txt_notice_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_notice_name"
		android:paddingTop="5dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:paddingBottom="10dp"
		android:ellipsize="end"
		android:maxLines="3"
		android:textColor="@android:color/black"
		android:textSize="16sp"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/border_gray"
		android:layout_below="@id/txt_notice_content"></View>

	<TextView
		android:id="@+id/txt_notice_time"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:gravity="center"
		android:layout_below="@id/txt_notice_content"
		android:padding="10dp"
		android:textColor="@android:color/black"
		android:textSize="16sp"/>

	<ImageView
		android:id="@+id/img_view_more"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_below="@id/txt_notice_content"
		android:layout_alignParentRight="true"
		android:scaleType="centerInside"
		android:src="@drawable/ic_expand"/>
</RelativeLayout>