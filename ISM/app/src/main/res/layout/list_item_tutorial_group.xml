<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/img_notification"
		android:layout_width="@dimen/dp19"
		android:layout_height="@dimen/dp19"
		android:layout_alignParentRight="true"
		android:layout_marginTop="@dimen/dp4"
		android:layout_marginRight="@dimen/dp4"
		android:src="@drawable/ic_notification_active"/>

	<TextView
		android:id="@+id/txt_status"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp56"
		android:layout_marginLeft="@dimen/dp1"
		android:paddingRight="@dimen/dp8"
		android:paddingTop="@dimen/dp1"
		android:paddingBottom="@dimen/dp1"
		android:text="Online"
		android:textSize="@dimen/sp12"
		android:background="@drawable/bg_gray_border_bottom"
		android:gravity="right"/>

	<com.ism.views.CircleImageView
		android:id="@+id/img_circle_dp"
		android:layout_width="@dimen/dp45"
		android:layout_height="@dimen/dp45"
		android:layout_marginLeft="@dimen/dp8"
		android:layout_marginRight="@dimen/dp8"
		android:layout_marginTop="@dimen/dp15"
		android:src="@drawable/img_default_dp"/>

	<TextView
		android:id="@+id/txt_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp15"
		android:maxLines="3"
		android:layout_toRightOf="@id/img_circle_dp"
		android:textSize="@dimen/sp12"/>

</RelativeLayout>