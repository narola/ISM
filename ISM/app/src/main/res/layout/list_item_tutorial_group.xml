<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/img_notification"
		android:layout_width="@dimen/d25dp"
		android:layout_height="@dimen/d25dp"
		android:layout_alignParentRight="true"
		android:layout_marginTop="@dimen/d5dp"
		android:layout_marginRight="@dimen/d5dp"
		android:src="@drawable/ic_notification_active"/>

	<TextView
		android:id="@+id/txt_status"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/d75dp"
		android:layout_marginLeft="@dimen/d1dp"
		android:paddingRight="@dimen/d10dp"
		android:paddingTop="@dimen/d1dp"
		android:paddingBottom="@dimen/d1dp"
		android:text="Online"
		android:textSize="@dimen/d16sp"
		android:background="@drawable/bg_gray_border_bottom"
		android:gravity="right"/>

	<com.ism.views.CircleImageView
		android:id="@+id/img_circle_dp"
		android:layout_width="@dimen/d60dp"
		android:layout_height="@dimen/d60dp"
		android:layout_marginLeft="@dimen/d10dp"
		android:layout_marginRight="@dimen/d10dp"
		android:layout_marginTop="@dimen/d20dp"
		android:src="@drawable/img_default_dp"/>

	<TextView
		android:id="@+id/txt_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/d20dp"
		android:maxLines="3"
		android:layout_toRightOf="@id/img_circle_dp"
		android:textSize="@dimen/d16sp"/>

</RelativeLayout>