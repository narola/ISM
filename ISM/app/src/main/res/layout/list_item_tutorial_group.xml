<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/img_notification"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:layout_alignParentRight="true"
		android:layout_marginTop="5dp"
		android:layout_marginRight="5dp"
		android:src="@drawable/ic_notification_active"/>

	<TextView
		android:id="@+id/txt_status"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="75dp"
		android:layout_marginLeft="1dp"
		android:paddingRight="10dp"
		android:paddingTop="1dp"
		android:paddingBottom="1dp"
		android:text="Online"
		android:background="@drawable/bg_gray_border_bottom"
		android:gravity="right"/>

	<com.ism.views.CircleImageView
		android:id="@+id/img_circle_dp"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="20dp"
		android:src="@drawable/img_default_dp"/>

	<TextView
		android:id="@+id/txt_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:maxLines="3"
		android:layout_toRightOf="@id/img_circle_dp"
		android:textSize="16sp"/>

</RelativeLayout>