<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:mContext="com.ism.fragment.desk.DeskFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_notes"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue"
            android:gravity="center"
            android:padding="@dimen/d10dp"
            android:text="+Add"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#cacaca" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.ism.views.CircleImageView
                android:id="@+id/img_user_pic"
                android:layout_width="@dimen/d50dp"
                android:layout_height="@dimen/d50dp"
                android:layout_margin="@dimen/d10dp"
                android:src="@drawable/img_default_dp" />

            <TextView
                android:id="@+id/txt_note_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/d10dp"
                android:text="Introduction to waves"
                android:textColor="@color/green"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/d10dp"
                android:src="@drawable/img_share_notes" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/d20dp"
                android:layout_marginTop="@dimen/d20dp"
                android:background="@color/text_gray" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/d10dp"
                android:src="@drawable/img_edit_notes" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rr_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title"
            android:background="@color/gray_light"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10dp"
                android:text="By : Admin "
                android:textColor="@color/color_blue" />

            <EditText
                android:id="@+id/txt_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/gray_light"
                android:padding="@dimen/d10dp"
                android:text="Physics"
                android:textColor="@color/color_red" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rr_details"
            android:background="@color/gray_light"
            android:gravity="top|left"
            android:padding="@dimen/d10dp"
            android:text="Hii"
            android:textSize="@dimen/d18sp" />

    </RelativeLayout>
</LinearLayout>