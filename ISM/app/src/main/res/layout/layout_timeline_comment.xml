<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<com.ism.views.CircleImageView
		android:id="@+id/img_dp"
		android:layout_width="@dimen/dp_size_timeline"
		android:layout_height="@dimen/dp_size_timeline"
		android:layout_marginRight="10dp"
		android:src="@drawable/userdp"/>

	<TextView
		android:id="@+id/txt_user_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:layout_marginTop="3dp"
		android:textColor="@color/bg_app_dark"
		android:layout_toRightOf="@id/img_dp"/>

	<TextView
		android:id="@+id/txt_status_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:textSize="16sp"
		android:layout_marginTop="5dp"
		android:textColor="@color/border_timeline"/>

	<TextView
		android:id="@+id/txt_status_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/img_dp"
		android:layout_below="@id/txt_user_name"
		android:textSize="18sp"
		android:textColor="@color/bg_app_dark"/>

	<TextView
		android:id="@+id/txt_school"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/img_dp"
		android:layout_below="@id/txt_status_text"
		android:layout_marginTop="3dp"
		android:textSize="16sp"
		android:textColor="@color/bg_app_dark"/>

	<TextView
		android:id="@+id/txt_following"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/img_dp"
		android:layout_below="@id/txt_school"
		android:textSize="15sp"
		android:textColor="@color/color_green"/>
</RelativeLayout>