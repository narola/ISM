<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp4"
                android:paddingLeft="@dimen/dp4"
                android:paddingRight="@dimen/dp4">

	<com.ism.views.CircleImageView
		android:id="@+id/img_dp"
		android:layout_width="@dimen/dp45"
		android:layout_height="@dimen/dp45"
		android:layout_marginTop="@dimen/dp4"
		android:layout_marginLeft="@dimen/dp4"
		android:layout_marginBottom="@dimen/dp4"
		android:layout_marginRight="@dimen/dp8"
		android:src="@drawable/img_default_dp"/>

	<TextView
		android:id="@+id/txt_student_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp4"
		android:layout_toRightOf="@+id/img_dp"
		android:textColor="@color/bg_app_dark"
		android:textSize="@dimen/sp14"/>

	<TextView
		android:id="@+id/txt_school"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_student_name"
		android:layout_toRightOf="@+id/img_dp"
		android:textColor="@color/bg_app_dark"
		android:textSize="@dimen/sp12"/>

	<TextView
		android:id="@+id/txt_score"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_school"
		android:layout_toRightOf="@+id/img_dp"
		android:layout_marginBottom="@dimen/dp4"
		android:textColor="@color/green"
		android:textSize="@dimen/sp19"/>

	<View
		android:id="@+id/divider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/divider"
		android:layout_marginLeft="@dimen/dp4"
		android:layout_marginRight="@dimen/dp4"
		android:layout_alignParentBottom="true"/>
</RelativeLayout>