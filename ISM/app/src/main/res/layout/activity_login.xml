<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin"
    android:gravity="center"
    tools:mContext="com.ism.activity.LoginActivity">

    <LinearLayout
        android:layout_width="500sp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/d60dp"
        android:layout_marginTop="@dimen/d50dp"
        android:background="@drawable/background_transparent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d40dp"
            android:layout_marginTop="@dimen/d40dp"
            android:src="@drawable/img_logo_ism" />

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d50dp"
                android:layout_marginRight="@dimen/d50dp"
                android:layout_marginTop="@dimen/d30dp"
                android:background="@drawable/background_edittext"
                android:gravity="center"
                android:hint="@string/username"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/d20dp" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d50dp"
                android:layout_marginRight="@dimen/d50dp"
                android:layout_marginTop="@dimen/d20dp"
                android:background="@drawable/background_edittext"
                android:gravity="center"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/d20dp" />

            <CheckBox
                android:id="@+id/chk_rememberme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d20dp"
                android:button="@drawable/custom_checkbox"
                android:checked="true"
                android:padding="@dimen/d10dp"
                android:text="@string/strrememberme"
                android:textColor="@color/color_gray1"
                android:textSize="@dimen/d18dp" />

            <com.ism.commonsource.view.ActionProcessButton
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d20dp"
                android:drawablePadding="@dimen/d10dp"
                android:drawableRight="@drawable/arrow"
                android:gravity="center"
                android:onClick="onClickLogin"
                android:paddingLeft="@dimen/d90dp"
                android:paddingRight="@dimen/d90dp"
                android:text="@string/strlogin"
                android:textColor="@color/white"
                android:textSize="@dimen/d20dp"
                app:pb_colorComplete="@color/color_dark_gray"
                app:pb_colorNormal="@color/color_dark_gray"
                app:pb_colorPressed="@color/color_dark_gray"
                app:pb_colorProgress="@color/purple_progress"
                app:pb_cornerRadius="@dimen/app_button_corner_radius"
                app:pb_textComplete="@string/strlogin"
                app:pb_textProgress="@string/processing" />

            <TextView
                android:id="@+id/txt_forgotpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d70dp"
                android:gravity="center"
                android:onClick="onClickForgotPassword"
                android:text="@string/strforgotpwd"
                android:textColor="@color/black"
                android:textSize="@dimen/d18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_donothave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/strdonothavecredentials"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/d18dp" />

                <TextView
                    android:id="@+id/txt_clickhere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:onClick="onClickHere"
                    android:paddingLeft="@dimen/d5dp"
                    android:text="@string/strclickhereu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/d18dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
