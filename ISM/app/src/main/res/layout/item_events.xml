<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="260dp"
    android:layout_marginBottom="@dimen/d10dp"
    android:layout_marginEnd="@dimen/d5dp"
    android:layout_marginLeft="@dimen/d5dp"
    android:layout_marginRight="@dimen/d5dp"
    android:layout_marginStart="@dimen/d5dp"
    android:layout_marginTop="@dimen/d10dp">

    <ImageView
        android:id="@+id/img_link"
        android:layout_width="205dp"
        android:layout_height="200dp"
        android:padding="@dimen/d5dp"
        android:src="@color/pink" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_link"
        android:layout_alignEnd="@+id/img_link"
        android:layout_margin="@dimen/d5dp"
        android:src="@drawable/like_fill" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_event_date"
        android:gravity="center"
        android:text="30th May"
        android:textColor="@color/green"
        android:textSize="@dimen/d20sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent NameEvent Name"
        android:ellipsize="end"
        android:lines="2"
        android:gravity="center"
        android:paddingRight="@dimen/d20sp"
        android:paddingLeft="@dimen/d5dp"
        android:paddingTop="@dimen/d5dp"
        android:paddingBottom="@dimen/d5dp"
        android:layout_below="@+id/img_link"
        android:textColor="@color/color_red"
        android:id="@+id/textView" />
</RelativeLayout>