			<TextView
				android:id="@+id/txt_answered_option2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp4"
				android:textSize="@dimen/sp14"
				android:text="Answer : A"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"/>
		</LinearLayout>

		<View
			android:layout_width="@dimen/dp1"
			android:layout_height="match_parent"
			android:background="@color/border_layout_tutorialmate_answers"
			android:layout_marginTop="@dimen/dp15"></View>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/dp4"
			android:orientation="vertical">

			<com.ism.views.CircleImageView
				android:id="@+id/img_tutorialmate_dp3"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp75"
				android:layout_gravity="center"
				android:src="@drawable/img_default_dp"
				app:civ_border_width="@dimen/dp3"
				app:civ_border_color="@color/color_white"/>

			<TextView
				android:id="@+id/txt_tutorialmate_name3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp4"
				android:textSize="@dimen/sp15"
				android:text="Adam Ross"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"/>

			<TextView
				android:id="@+id/txt_answered_option3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp4"
				android:textSize="@dimen/sp14"
				android:text="Answer : A"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"/>
		</LinearLayout>

		<View
			android:layout_width="@dimen/dp1"
			android:layout_height="match_parent"
			android:background="@color/border_layout_tutorialmate_answers"
			android:layout_marginTop="@dimen/dp15"></View>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/dp4"
			android:orientation="vertical">

			<com.ism.views.CircleImageView
				android:id="@+id/img_tutorialmate_dp4"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp75"
				android:layout_gravity="center"
				android:src="@drawable/img_default_dp"
				app:civ_border_width="@dimen/dp3"
				app:civ_border_color="@color/color_white"/>

			<TextView
				android:id="@+id/txt_tutorialmate_name4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp4"
				android:textSize="@dimen/sp15"
				android:text="Adam Ross"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"/>

			<TextView
				android:id="@+id/txt_answered_option4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp4"
				android:textSize="@dimen/sp14"
				android:text="Answer : A"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"/>
		</LinearLayout>

		<View
			android:layout_width="@dimen/dp1"
			android:layout_height="match_parent"
			android:background="@color/border_layout_tutorialmate_answers"
			android:layout_marginTop="@dimen/dp15"></View>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:padding="@dimen/dp4"
			android:orientation="vertical">

			<com.ism.views.CircleImageView
				android:id="@+id/img_tutorialmate_dp5"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp75"
				android:layout_gravity="center"
				android:src="@drawable/img_default_dp"
				app:civ_border_width="@dimen/dp3"
				app:civ_border_color="@color/color_white"/>

			<TextView
				android:id="@+id/txt_tutorialmate_name5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp4"
				android:textSize="@dimen/sp15"
				android:text="Adam Ross"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"/>

			<TextView
				android:id="@+id/txt_answered_option5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp4"
				android:textSize="@dimen/sp14"
				android:text="Answer : A"
				android:gravity="center"
				android:textColor="@color/bg_app_dark"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>