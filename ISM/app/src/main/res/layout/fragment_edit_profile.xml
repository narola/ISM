<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/studymate_tab_bg"
    android:orientation="vertical"
    tools:mContext="com.ism.fragment.userProfile.EditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow_separator"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_about_me"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab_edit_profile"
            android:gravity="center"
            android:padding="@dimen/d5dp"
            android:text="@string/strAboutMe"
            android:textColor="@drawable/text_tab_edit_profile"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#D9D9D9"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_books"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab_edit_profile"
            android:gravity="center"
            android:text="@string/strBooks"
            android:textColor="@drawable/text_tab_edit_profile"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#D9D9D9"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_movies"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab_edit_profile"
            android:gravity="center"
            android:text="@string/strMovies"
            android:textColor="@drawable/text_tab_edit_profile"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/line3"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#D9D9D9"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_role_models"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab_edit_profile"
            android:gravity="center"
            android:text="@string/strRoleModels"
            android:textColor="@drawable/text_tab_edit_profile"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/line4"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#D9D9D9"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_pasttime"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab_edit_profile"
            android:gravity="center"
            android:text="@string/strPastimes"
            android:textColor="@drawable/text_tab_edit_profile"
            android:textSize="@dimen/d20sp" />

    </LinearLayout>

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/d5dp"-->
        <!--android:background="@drawable/shadow_separator" />-->

    <FrameLayout
        android:id="@+id/fl_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"></FrameLayout>
</LinearLayout>