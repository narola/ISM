<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15dp"
                android:layout_marginRight="@dimen/d15dp">

	<View
		android:id="@+id/view_divider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="@dimen/dp_margin_list"
		android:layout_marginLeft="@dimen/d15dp"
		android:layout_marginRight="@dimen/d15dp"
		android:background="@color/divider"/>

	<com.ism.views.CircleImageView
		android:id="@+id/img_dp"
		android:layout_width="@dimen/dp_size_list_small"
		android:layout_height="@dimen/dp_size_list_small"
		android:layout_below="@id/view_divider"
		android:layout_marginTop="@dimen/dp_margin_list"
		android:layout_marginLeft="@dimen/dp_margin_list"
		android:layout_marginRight="@dimen/dp_margin_list"
		android:src="@drawable/img_default_dp"/>

	<TextView
		android:id="@+id/txt_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/img_dp"
		android:layout_below="@id/view_divider"
		android:layout_marginTop="@dimen/dp_margin_list"
		android:paddingLeft="@dimen/comment_padding"
		android:paddingRight="@dimen/comment_padding"
		android:textColor="@color/green"
		android:textSize="@dimen/post_text_size"/>

	<TextView
		android:id="@+id/txt_comment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/txt_name"
		android:layout_below="@id/view_divider"
		android:layout_marginTop="@dimen/dp_margin_list"
		android:paddingLeft="@dimen/comment_padding"
		android:paddingRight="@dimen/comment_padding"
		android:textColor="@color/color_gray"
		android:textSize="@dimen/post_text_size"/>

	<TextView
		android:id="@+id/txt_duration"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_name"
		android:layout_toRightOf="@id/img_dp"
		android:textSize="17sp"
		android:textStyle="italic"
		android:paddingLeft="@dimen/comment_padding"/>

</RelativeLayout>