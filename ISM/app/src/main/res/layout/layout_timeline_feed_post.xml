<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

	<com.ism.views.CircleImageView
		android:id="@+id/img_dp"
		android:layout_width="@dimen/dp_size_timeline"
		android:layout_height="@dimen/dp_size_timeline"
		android:layout_marginRight="@dimen/dp8"
		android:src="@drawable/img_default_dp"/>

	<TextView
		android:id="@+id/txt_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/img_dp"
		android:textColor="@color/bg_app_dark"
		android:textSize="@dimen/sp14"/>

	<TextView
		android:id="@+id/txt_post"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_name"
		android:layout_toRightOf="@id/img_dp"
		android:layout_marginTop="@dimen/dp4"
		android:textColor="@color/bg_app_dark"
		android:textSize="@dimen/sp14"/>

	<TextView
		android:id="@+id/txt_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:textColor="@color/text_gray"
		android:textSize="@dimen/sp12"/>

	<ImageView
		android:id="@+id/img_like"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_post"
		android:layout_toRightOf="@id/img_dp"
		android:visibility="gone"
		android:src="@drawable/img_like"/>

	<TextView
		android:id="@+id/txt_likes"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txt_post"
		android:layout_toRightOf="@id/img_like"
		android:textColor="@color/bg_app_dark"
		android:visibility="gone"
		android:textSize="@dimen/dp14"/>
</RelativeLayout>