<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d15dp"
        android:layout_marginRight="@dimen/d15dp"
        android:orientation="horizontal">

        <com.ism.helper.CircleImageView

            android:id="@+id/img_dp_post_creator"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/d15dp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/d10dp"
            android:src="@drawable/userdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_username_post_creator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10sp"
                android:text="Emma Mall"
                android:textColor="@color/color_black"
                android:textSize="@dimen/d25sp" />

            <TextView
                android:id="@+id/txt_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="4"
                android:padding="@dimen/d10sp"
                android:text="@string/strsentence"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/d18sp" />

            <!-- comment like/dislike section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_like_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/image_like" />

                <TextView
                    android:id="@+id/txt_post_like_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d10dp"
                    android:text="23"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d18sp" />

                <ImageView
                    android:id="@+id/img_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/txt_post_comments_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d10dp"
                    android:text="7"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d18sp" />

                <TextView
                    android:id="@+id/txt_view_all_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d10dp"
                    android:text="View All"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/d18sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <ImageView
                        android:id="@+id/img_post_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:padding="@dimen/d5dp"
                        android:src="@drawable/image_post_option" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!--<ListView-->
    <!--android:id="@+id/raw_list_comments"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="100sp"-->
    <!--android:layout_marginLeft="@dimen/d15dp"-->
    <!--android:layout_marginRight="@dimen/d15dp" />-->
    <LinearLayout
        android:id="@+id/ll_all_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d15dp"
            android:layout_marginRight="@dimen/d15dp">

            <com.ism.helper.CircleImageView
                android:id="@+id/img_dp_commenter1"
                android:layout_width="@dimen/d50dp"
                android:layout_height="@dimen/d50dp"
                android:layout_margin="@dimen/d15dp"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/d10dp"
                android:src="@drawable/userdp" />

            <LinearLayout
                android:id="@+id/rl_comments1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d10dp"
                android:layout_marginLeft="@dimen/d15dp"
                android:layout_marginRight="@dimen/d15dp"
                android:layout_marginTop="@dimen/d15dp"
                android:layout_toRightOf="@+id/img_dp_commenter1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_username_commenter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:text="Adam Stanger"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/d15sp" />

                <TextView
                    android:id="@+id/txt_comments_from_commenter1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="@dimen/d5dp"
                    android:text="Hi...how are you?"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/d18dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_comments1"
                android:layout_marginLeft="@dimen/d15dp"
                android:layout_toRightOf="@+id/img_dp_commenter1">

                <TextView
                    android:id="@+id/txt_comment_duration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:text="1 day" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d15dp"
            android:layout_marginRight="@dimen/d15dp">

            <com.ism.helper.CircleImageView
                android:id="@+id/img_dp_commenter2"
                android:layout_width="@dimen/d50dp"
                android:layout_height="@dimen/d50dp"
                android:layout_margin="@dimen/d15dp"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/d10dp"
                android:src="@drawable/userdp" />

            <LinearLayout
                android:id="@+id/rl_comments2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d10dp"
                android:layout_marginLeft="@dimen/d15dp"
                android:layout_marginRight="@dimen/d15dp"
                android:layout_marginTop="@dimen/d15dp"
                android:layout_toRightOf="@+id/img_dp_commenter2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_username_commenter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:text="Adam Stanger"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/d15sp" />

                <TextView
                    android:id="@+id/txt_comments_from_commenter2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="@dimen/d5dp"
                    android:text="Hi...how are you?"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/d18dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_comments2"
                android:layout_marginLeft="@dimen/d15dp"
                android:layout_toRightOf="@+id/img_dp_commenter2">

                <TextView
                    android:id="@+id/txt_comment_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:text="1 day" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/et_writePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d10dp"
        android:layout_marginLeft="@dimen/d15dp"
        android:layout_marginRight="@dimen/d15dp"
        android:layout_marginTop="@dimen/d10dp"
        android:background="@drawable/edittext_shadow_selector"
        android:hint="@string/strwriteyourcommenthere"
        android:padding="@dimen/d15dp"
        android:textColorHint="@color/color_text_hint" />
</LinearLayout>