<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_controller_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controller_top_height"
        android:background="@drawable/bg_controller_top">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@drawable/bg_right_controller_top_button"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="@dimen/controller_top_small_button_width"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_logo"
            android:scaleType="centerInside"
            android:background="@drawable/bg_right_controller_top_button"
            android:src="@drawable/image_home" />

	    <TextView
		    android:id="@+id/txt_title"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_toRightOf="@id/img_home"
		    android:layout_toLeftOf="@+id/ll_search"
		    android:textSize="@dimen/controller_top_menu_text_size"
		    android:gravity="center"
		    android:visibility="gone"/>

        <RelativeLayout
	        android:id="@+id/rl_controller_top_menu"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@id/img_home"
	        android:layout_toLeftOf="@+id/ll_search"
            android:visibility="gone">

	        <ImageView
		        android:id="@+id/img_back"
		        android:layout_width="@dimen/controller_top_small_button_width"
		        android:layout_height="match_parent"
		        android:visibility="gone"
		        android:scaleType="centerInside"
		        android:background="@drawable/bg_right_controller_top_button"
		        android:src="@drawable/ic_back" />

	        <Spinner
		        android:id="@+id/sp_submenu"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/img_back"
		        android:popupBackground="@color/bg_controller_top_dark"
		        android:visibility="gone"></Spinner>

	        <TextView
		        android:id="@+id/txt_one"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/img_back"
		        android:visibility="gone"
		        android:gravity="center"
		        android:textColor="@android:color/white"
		        android:textSize="@dimen/controller_top_menu_text_size"
                android:paddingLeft="@dimen/controller_menu_text_padding"
		        android:paddingRight="@dimen/controller_menu_text_padding"/>

	        <TextView
		        android:id="@+id/txt_two"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/txt_one"
		        android:visibility="gone"
		        android:gravity="center"
		        android:textColor="@android:color/white"
		        android:textSize="@dimen/controller_top_menu_text_size"
		        android:background="@drawable/bg_left_controller_top_button"
                android:paddingLeft="@dimen/controller_menu_text_padding"
		        android:paddingRight="@dimen/controller_menu_text_padding"/>

	        <TextView
		        android:id="@+id/txt_three"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/txt_two"
		        android:visibility="gone"
		        android:gravity="center"
		        android:textColor="@android:color/white"
		        android:textSize="@dimen/controller_top_menu_text_size"
		        android:background="@drawable/bg_left_controller_top_button"
                android:paddingLeft="@dimen/controller_menu_text_padding"
		        android:paddingRight="@dimen/controller_menu_text_padding"/>

	        <TextView
		        android:id="@+id/txt_four"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/txt_three"
		        android:visibility="gone"
		        android:gravity="center"
		        android:textColor="@android:color/white"
		        android:textSize="@dimen/controller_top_menu_text_size"
		        android:background="@drawable/bg_left_controller_top_button"
                android:paddingLeft="@dimen/controller_menu_text_padding"
		        android:paddingRight="@dimen/controller_menu_text_padding"/>

	        <TextView
		        android:id="@+id/txt_five"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/txt_four"
		        android:visibility="gone"
		        android:gravity="center"
		        android:textColor="@android:color/white"
		        android:textSize="@dimen/controller_top_menu_text_size"
		        android:background="@drawable/bg_left_controller_top_button"
                android:paddingLeft="@dimen/controller_menu_text_padding"
		        android:paddingRight="@dimen/controller_menu_text_padding"/>

	        <TextView
		        android:id="@+id/txt_action"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_alignParentRight="true"
		        android:visibility="gone"
		        android:gravity="center"
		        android:textColor="@android:color/white"
		        android:textSize="@dimen/controller_top_menu_text_size"
		        android:background="@drawable/bg_controller_top_action"
		        android:paddingLeft="@dimen/controller_menu_text_padding"
		        android:paddingRight="@dimen/controller_menu_text_padding"/>

        </RelativeLayout>

        <LinearLayout
	        android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
	        android:layout_toLeftOf="@+id/img_notes"
	        android:orientation="horizontal" >

	        <ImageView
		        android:id="@+id/img_search"
		        android:layout_width="@dimen/controller_top_button_width"
		        android:layout_height="match_parent"
		        android:scaleType="centerInside"
		        android:background="@drawable/bg_left_controller_top_button"
		        android:src="@drawable/image_search" />

	        <EditText
		        android:id="@+id/et_search"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="20dp"
		        android:layout_gravity="center_vertical"
		        android:padding="10dp"
		        android:inputType="text"
		        android:imeOptions="actionSearch"
                android:textColorHint="@color/color_graylight"
		        android:hint="@string/hint_search"
		        android:textColor="@color/colorPrimary"
		        android:visibility="gone"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_notes"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_teacher_profile"
            android:scaleType="centerInside"
            android:background="@drawable/bg_left_controller_top_button"
            android:src="@drawable/image_notes" />

        <ImageView
            android:id="@+id/img_teacher_profile"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_chat"
            android:scaleType="centerInside"
            android:background="@drawable/bg_left_controller_top_button"
            android:src="@drawable/image_study_mates" />

        <ImageView
            android:id="@+id/img_chat"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:background="@drawable/bg_left_controller_top_button"
            android:src="@drawable/image_chat" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_controller_left"
        android:layout_width="@dimen/controller_left_width"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:orientation="vertical"
        android:background="@drawable/bg_controller_top">

        <ImageView
            android:id="@+id/img_tutorial"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@drawable/bg_controller_left_button_tutorial"
            android:src="@drawable/image_tutorial"/>

        <ImageView
            android:id="@+id/img_classroom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@drawable/bg_controller_left_button_assessment"
            android:src="@drawable/image_classroom"/>

        <ImageView
            android:id="@+id/img_assessment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@drawable/bg_controller_left_button_assessment"
            android:src="@drawable/image_assessment"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/img_desk"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@drawable/bg_controller_left_button_desk"
            android:src="@drawable/image_desk"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/img_reportcard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@drawable/bg_controller_left_button_report_card"
            android:src="@drawable/image_report_card"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/img_logout"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="@dimen/controller_left_width"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logout"
            android:background="@color/color_pink" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:layout_toRightOf="@id/ll_controller_left"
        android:layout_toLeftOf="@+id/fl_fragment_container_right"></FrameLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_container_right"
        android:layout_width="@dimen/content_right_width"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/rl_controller_top"
        android:layout_alignParentRight="true"></FrameLayout>
</RelativeLayout>
