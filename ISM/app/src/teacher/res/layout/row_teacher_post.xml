<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent_teacher_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_news_feed"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d15dp"
        android:layout_marginRight="@dimen/d15dp"
        android:orientation="horizontal">

        <com.ism.helper.CircleImageView

            android:id="@+id/img_dp_post_creator"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/d15dp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/d10dp"
            android:src="@drawable/userdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_username_post_creator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10sp"
                android:text="Emma Mall"
                android:textColor="@color/color_black"
                android:textSize="@dimen/d25sp" />

            <TextView
                android:id="@+id/txt_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="4"
                android:padding="@dimen/d10sp"
                android:text=""
                android:textColor="@color/color_gray"
                android:textSize="@dimen/d18sp" />

            <!-- comment like/dislike section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_like_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/bg_image_like" />

                <TextView
                    android:id="@+id/txt_post_like_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d10dp"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d18sp" />

                <ImageView
                    android:id="@+id/img_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/txt_post_comments_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d10dp"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d18sp" />

                <TextView
                    android:id="@+id/txt_view_all_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d10dp"
                    android:text="View All"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/d18sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <ImageView
                        android:id="@+id/img_tag_studymates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:padding="@dimen/d5dp"
                        android:src="@drawable/image_post_option" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_row_inflater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/et_writePost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d70dp"
            android:layout_marginBottom="@dimen/d10dp"
            android:layout_marginLeft="@dimen/d15dp"
            android:layout_marginRight="@dimen/d15dp"
            android:layout_marginTop="@dimen/d10dp"
            android:layout_toLeftOf="@+id/txt_submit_post"
            android:background="@drawable/bg_news_feed"
            android:hint="@string/strwriteyourcommenthere"
            android:padding="15sp"
            android:textColorHint="@color/color_text_hint" />

        <TextView
            android:id="@+id/txt_submit_post"
            android:layout_width="@dimen/d110dp"
            android:layout_height="@dimen/d60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d20dp"
            android:background="@color/color_dark_gray"
            android:gravity="center"
            android:text="Comment"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20dp"
            android:textStyle="bold" />
    </RelativeLayout>


</LinearLayout>