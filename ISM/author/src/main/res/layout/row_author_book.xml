<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/d10dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_author_books"
        android:padding="@dimen/d15dp">


        <ImageView
            android:id="@+id/img_book_cover"
            android:layout_width="@dimen/d235dp"
            android:layout_height="@dimen/d235dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />


        <ImageView
            android:id="@+id/img_book_info"
            android:layout_width="@dimen/d40dp"
            android:layout_height="@dimen/d40dp"
            android:layout_alignEnd="@+id/img_book_cover"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/img_book_cover"
            android:layout_margin="@dimen/d5dp"
            android:src="@drawable/img_i"
            android:visibility="visible" />


        <TextView
            android:id="@+id/txt_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img_book_cover"
            android:layout_below="@+id/img_book_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="3"
            android:padding="@dimen/d1dp"
            android:text="Book"
            android:textColor="@color/cpb_red"
            android:textSize="@dimen/d20sp" />


        <TextView
            android:id="@+id/txt_book_viewers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_book_name"
            android:layout_below="@+id/txt_book_name"
            android:layout_marginTop="@dimen/d10dp"
            android:gravity="center"
            android:padding="@dimen/d1dp"
            android:text=""
            android:textColor="@color/color_dark_gray"
            android:textSize="@dimen/d18sp" />
    </RelativeLayout>


</LinearLayout>
