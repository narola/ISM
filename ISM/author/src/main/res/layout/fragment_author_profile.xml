<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ism.author.fragment.userprofile.AuthorProfileFragment">


    <LinearLayout
        android:layout_width="@dimen/content_right_width"
        android:layout_height="match_parent"
        android:background="#323941"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.ism.author.views.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/img_user"
                android:src="@drawable/userdp"
                android:layout_alignParentStart="true"
                app:civ_border_color="@color/circular_image_border_color"
                app:civ_border_width="@dimen/circular_imageview_border_width" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10dp"
                android:id="@+id/txt_view_profile"
                android:text="@string/strviewprofile"
                android:layout_toRightOf="@+id/img_user"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/d20sp"
                android:layout_centerVertical="true"
               ></TextView>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10dp"
            android:paddingLeft="@dimen/d5dp"
            android:text="@string/strtest"
            android:id="@+id/txt_user_name"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d22sp"
            >

        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/d60dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="85dp"
                    android:background="@drawable/bg_rightmenu_notification"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_notification"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/img_notification"/>
                <TextView
                    android:id="@+id/txt_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_notificaton"
                    android:textSize="@dimen/notification_digit_text_size"
                    android:paddingRight="@dimen/notification_digit_horizontal_padding"
                    android:gravity="center"
                    android:paddingLeft="@dimen/notification_digit_horizontal_padding"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:layout_alignRight="@id/img_notification"/>
                <ImageView
                    android:layout_width="85dp"
                    android:background="@drawable/bg_rightmenu_notification"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_message"
                    android:layout_toRightOf="@+id/img_notification"
                    android:src="@drawable/img_message"/>
                <TextView
                    android:id="@+id/txt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_message"
                    android:textSize="@dimen/notification_digit_text_size"
                    android:paddingRight="@dimen/notification_digit_horizontal_padding"
                    android:paddingLeft="@dimen/notification_digit_horizontal_padding"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_alignRight="@id/img_message"/>
                <ImageView
                    android:layout_width="85dp"
                    android:background="@drawable/bg_rightmenu_notification"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_friend_request"
                    android:layout_toRightOf="@+id/img_message"
                    android:src="@drawable/img_friend_request"/>
                <TextView
                    android:id="@+id/txt_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_friend_request"
                    android:textSize="@dimen/notification_digit_text_size"
                    android:paddingRight="@dimen/notification_digit_horizontal_padding"
                    android:gravity="center"
                    android:paddingLeft="@dimen/notification_digit_horizontal_padding"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:layout_alignRight="@id/img_friend_request"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"></RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"></RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_myfeeds"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/d20sp"
            android:text="@string/strmyfeeds"
            android:textAllCaps="true"
            android:background="@drawable/bg_profile_lable"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20sp"
         />

        <!--<TextView-->
            <!--android:id="@+id/txt_mybooks"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="left"-->
            <!--android:padding="@dimen/d20sp"-->
            <!--android:text="@string/strmybooks"-->
            <!--android:textAllCaps="true"-->
            <!--android:background="@drawable/bg_profile_lable"-->
            <!--android:textColor="@color/color_white"-->
            <!--android:textSize="@dimen/d20sp"-->
            <!--/>-->

        <TextView
            android:id="@+id/txt_followers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@drawable/bg_profile_lable"
            android:padding="@dimen/d20sp"
            android:text="@string/strfollowers"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20sp"
            />


        <TextView
            android:id="@+id/txt_myactivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@drawable/bg_profile_lable"
            android:padding="@dimen/d20sp"
            android:text="@string/strmyactivity"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20sp"
            />


    </LinearLayout>


</LinearLayout>
