<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d15dp"
    android:layout_marginRight="@dimen/d15dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/d15dp"
        android:layout_marginRight="@dimen/d15dp"
        android:layout_marginTop="@dimen/d15dp"
        android:background="@color/news_feed_post_box_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ism.author.helper.CircleImageView
            android:id="@+id/img_commenter_dp"
            android:layout_width="@dimen/d50dp"
            android:layout_height="@dimen/d50dp"
            android:layout_marginLeft="@dimen/d15dp"
            android:layout_marginTop="@dimen/d15dp"
            android:padding="@dimen/d10dp"
            android:src="@drawable/userdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_commenter_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d5dp"
                    android:text="Adam Stanger"
                    android:textColor="@color/color_orange"
                    android:textSize="@dimen/d18sp" />

                <TextView
                    android:id="@+id/txt_commenter_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:ellipsize="end"
                    android:padding="@dimen/d5dp"
                    android:text="Hi...how are you?"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/d18dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_comment_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_comments"
                android:layout_marginLeft="@dimen/d15dp"
                android:layout_toRightOf="@+id/img_commenter_dp"
                android:padding="@dimen/d5dp"
                android:text="1 day" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


