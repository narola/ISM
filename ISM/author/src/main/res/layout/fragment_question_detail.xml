<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_separator"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/d25dp"
                android:paddingRight="@dimen/d25dp">

                <com.ism.author.views.CircleImageView
                    android:id="@+id/img_user_dp"
                    android:layout_width="@dimen/d60dp"
                    android:layout_height="@dimen/d60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:layout_marginRight="@dimen/d10dp"
                    android:layout_marginTop="@dimen/d10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/userdp" />

                <TextView
                    android:id="@+id/txt_creator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d5dp"
                    android:layout_marginLeft="@dimen/d5dp"
                    android:layout_marginRight="@dimen/d5dp"
                    android:layout_marginTop="@dimen/d10dp"
                    android:gravity="center"
                    android:text="Adam Stanger"
                    android:textColor="@color/color_red"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d15dp"
                    android:text="Jackson JSR-310 module fails to  deserialize simplest offsetDatetime format?"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/d18sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/d15dp"
                    android:paddingRight="@dimen/d15dp">


                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="26th Oct 2015"
                        android:textColor="@color/color_question"
                        android:textSize="@dimen/d15sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_followers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="50 followers"
                            android:textColor="@color/color_pink"
                            android:textSize="@dimen/d15sp" />

                        <TextView
                            android:id="@+id/txt_total_comments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_question"
                            android:layout_marginTop="@dimen/d5dp"
                            android:gravity="left"
                            android:text="50 Comments"
                            android:textColor="@color/color_pink"
                            android:textSize="@dimen/d15sp" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_question_comments_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/d10dp" />

            <include
                layout="@layout/include_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
