<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_question_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:padding="10dp"
        android:text="Question 1"
        android:textAllCaps="false"
        android:textColor="@color/bg_assessment"
        android:textSize="@dimen/d15sp" />

    <TextView
        android:id="@+id/txt_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:padding="10dp"
        android:text="Question text"
        android:textAllCaps="false"
        android:textColor="@color/color_black"
        android:textSize="@dimen/d15sp" />

    <LinearLayout
        android:id="@+id/ll_questions_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d1d1d1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strcorrect_answer"
            android:textColor="@color/color_red"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Answer"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_evoluations_notes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/strevoluations_notes"
                android:textColor="@color/color_green"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/et_evoluations_notes"
                android:layout_width="match_parent"
                android:inputType="textImeMultiLine"
                android:background="@color/color_white"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
           android:background="#d1d1d1"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_solution"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/strsolutions"
                android:textColor="@color/color_green"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/et_solution"
                android:layout_width="match_parent"
                android:inputType="textImeMultiLine"
                android:background="@color/color_white"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
