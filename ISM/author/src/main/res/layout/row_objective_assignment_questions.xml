<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/d15dp"
        android:paddingRight="@dimen/d15dp">

        <TextView
            android:id="@+id/txt_question_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:padding="@dimen/d5dp"
            android:text="Question 1"
            android:textAllCaps="false"
            android:textColor="@color/bg_assessment"
            android:textSize="@dimen/d22sp" />

        <TextView
            android:id="@+id/txt_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d5dp"
            android:gravity="left|center"
            android:padding="@dimen/d5dp"
            android:text="Question"
            android:textAllCaps="false"
            android:textColor="@color/question_color"
            android:textSize="@dimen/d22sp" />

        <LinearLayout
            android:id="@+id/ll_questions_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d10dp"
            android:paddingLeft="@dimen/d5dp"
            android:paddingRight="@dimen/d5dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_answer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10dp"
                android:layout_marginRight="@dimen/d10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d1dp"
                    android:background="#d1d1d1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f7f7f7"
                    android:orientation="horizontal"
                    android:padding="@dimen/d5dp">

                    <LinearLayout
                        android:id="@+id/ll_correct_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_correct_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/strcorrect_answer"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/d16sp" />

                        <TextView
                            android:id="@+id/txt_author_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:paddingLeft="@dimen/d5dp"
                            android:text="Answer"
                            android:textSize="@dimen/d18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txt_studentname_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/stranswer"
                            android:textColor="@color/color_pink"
                            android:textSize="@dimen/d16sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txt_student_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/d10dp"
                            android:textSize="@dimen/d18sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_evaluation_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10dp"
                android:layout_marginRight="@dimen/d10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d1dp"
                    android:background="#d1d1d1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/d10dp">

                    <LinearLayout
                        android:layout_width="@dimen/d0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/d5dp">

                        <TextView
                            android:id="@+id/txt_evoluations_notes_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="@string/strevoluations_notes"
                            android:textColor="@color/color_green"
                            android:textSize="@dimen/d16sp" />

                        <TextView
                            android:id="@+id/tv_evoluations_notes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:editable="false"
                            android:gravity="left|top"
                            android:inputType="textMultiLine"
                            android:textSize="@dimen/d18sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/d1dp"
                        android:layout_height="match_parent"
                        android:background="#d1d1d1" />

                    <LinearLayout
                        android:layout_width="@dimen/d0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/d5dp">

                        <TextView
                            android:id="@+id/txt_solution_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:text="@string/strsolutions"
                            android:textColor="@color/color_green"
                            android:textSize="@dimen/d16sp" />

                        <TextView
                            android:id="@+id/tv_title_solution"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:editable="false"
                            android:gravity="left|top"
                            android:inputType="textMultiLine"
                            android:textSize="@dimen/d18sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_student_marks"
        android:background="@color/border_gray" />

</LinearLayout>
