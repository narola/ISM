<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_assignment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_bg"
            android:paddingBottom="@dimen/d10dp"
            android:paddingLeft="@dimen/d25dp"
            android:paddingTop="@dimen/d10dp"
            android:text="@string/strtest"
            android:textColor="@color/question_color"
            android:textSize="@dimen/d18dp" />

        <TextView
            android:id="@+id/tv_assignment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d30dp"
            android:background="@color/color_white"
            android:padding="@dimen/d10dp"
            android:text="@string/strtest"
            android:textColor="@color/color_answer"
            android:textSize="@dimen/d18dp" />
    </LinearLayout>

</LinearLayout>
