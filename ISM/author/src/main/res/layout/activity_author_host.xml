<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_controller_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controller_top_height"
        android:background="@drawable/bg_controller_top">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_right_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/logo_blue" />

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="@dimen/controller_top_small_button_width"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_logo"
            android:background="@drawable/bg_right_controller_top_button"
            android:onClick="openMainContainerFragment"
            android:scaleType="centerInside"
            android:src="@drawable/image_home" />

        <RelativeLayout
            android:id="@+id/rl_controller_top_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_search"
            android:layout_toRightOf="@id/img_home"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/controller_top_small_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/bg_right_controller_top_button"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_back"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/d15dp"
                android:text="dsdsdsds"
                android:textColor="@color/color_white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/sp_submenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_back"
                android:visibility="gone"></Spinner>

            <TextView
                android:id="@+id/txt_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#323941"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_author_profile"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/controller_top_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/bg_left_controller_top_button"
                android:onClick="searchFeeds"
                android:scaleType="centerInside"
                android:src="@drawable/selector_search" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:hint="@string/hint_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/color_graylight"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_author_profile"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_high_score"
            android:background="@drawable/bg_left_controller_top_button"
            android:onClick="openRightContainerFragment"
            android:scaleType="centerInside"
            android:src="@drawable/selector_user" />

        <ImageView
            android:id="@+id/img_high_score"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_left_controller_top_button"
            android:onClick="openRightContainerFragment"
            android:scaleType="centerInside"
            android:src="@drawable/selector_trophy" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_controller_left"
        android:layout_width="@dimen/controller_left_width"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:background="@drawable/sidebar"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_office"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controller_left_heihgt"
            android:background="@drawable/bg_controller_left_button_office"
            android:onClick="openMainContainerFragment"
            android:scaleType="centerInside"
            android:src="@drawable/image_office" />
        <ImageView
            android:id="@+id/img_books"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controller_left_heihgt"
            android:background="@drawable/bg_controller_left_button_books"
            android:onClick="openMainContainerFragment"
            android:scaleType="centerInside"
            android:src="@drawable/image_books" />
        <ImageView
            android:id="@+id/img_edit_profile_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controller_left_heihgt"
            android:background="@drawable/bg_edit_profile_left_controller"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/img_edit_profile_tutorial"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controller_left_heihgt"
            android:background="@drawable/bg_edit_profile_left_controller"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tutorial"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_edit_profile_classroom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controller_left_heihgt"
            android:background="@drawable/bg_edit_profile_left_controller"
            android:scaleType="centerInside"
            android:src="@drawable/ic_classroom"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_edit_profile_assesment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/controller_left_heihgt"
            android:background="@drawable/bg_edit_profile_left_controller"
            android:scaleType="centerInside"
            android:src="@drawable/ic_assessment"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="bottom">


            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="@dimen/controller_left_width"
                android:layout_height="@dimen/controller_left_width"
                android:background="@color/color_blue"
                android:onClick="logOut"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logout" />
        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_fragment_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:layout_toLeftOf="@+id/fl_fragment_container_right"
        android:layout_toRightOf="@id/ll_controller_left"></FrameLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_container_right"
        android:layout_width="@dimen/content_right_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_controller_top"
        android:background="@android:color/darker_gray"
        android:visibility="visible"></FrameLayout>


    <com.ism.commonsource.view.ActionProcessButton
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:pb_colorComplete="@color/color_dark_gray"
        app:pb_colorNormal="@color/color_dark_gray"
        app:pb_colorPressed="@color/color_dark_gray"
        app:pb_colorProgress="@color/purple_progress" />

</RelativeLayout>