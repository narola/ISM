<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ism.author.activtiy.PostActivity"
    android:orientation="vertical">
    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/color_actionbar"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20sp"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/txt_cancel"
            android:background="@drawable/bg_icon"
            android:text="@string/strcancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/d20sp"
            android:id="@+id/txt_post"
            android:gravity="center"
            android:layout_gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/d20dp"
            android:drawableRight="@drawable/arrow"
            android:background="@drawable/bg_icon"
            android:text="@string/strpost" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_sayit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="85dp"
                android:layout_weight="0.8"
                android:background="@color/color_white"
                android:gravity="top"
                android:hint="SAY IT"
                android:padding="10dp" />

            <com.ism.author.views.HorizontalListView
                android:id="@+id/horilistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="85dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tools"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/rl_main"
            android:background="@drawable/sidebar"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_keyboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_keyboard" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_link" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_video" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_audio" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_tool"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_tools" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_emoticons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_emoticons" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_bottompost"
        android:orientation="vertical"
        android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_bottompost"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_captureimg"
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_capture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txt_capture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chooseimg"
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/imggallery" />

            <TextView
                android:id="@+id/txt_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recordaudio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_bottompost"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/audio_done" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ism.author.views.CircularSeekBar
                android:id="@+id/circularSeekBar"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:padding="20dp"
                app:circle_color="@color/color_white"
                app:circle_progress_color="#EA4A51"
                app:circle_stroke_width="2dp"
                app:circle_x_radius="100dp"
                app:circle_y_radius="100dp"
                app:end_angle="90"
                app:max="100"
                app:pointer_alpha_ontouch="100"
                app:pointer_color="#EA4A51"
                app:pointer_halo_border_width="0dp"
                app:pointer_halo_color="#00ffffff"
                app:progress="0"
                app:start_angle="90"
                app:use_custom_radii="true" />

            <ImageView
                android:id="@+id/img_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_stop" />
    </LinearLayout>
    </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>