<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="@dimen/d10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_preview_question_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strquestion"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/d22sp" />


            <TextView
                android:id="@+id/tv_preview_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d5dp"
                android:text="@string/strquestion"
                android:textColor="@color/color_question"
                android:textSize="@dimen/d22sp" />


            <LinearLayout
                android:id="@+id/ll_preview_question_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/tv_preview_question_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10dp"
                android:text="@string/strquestion"
                android:textColor="@color/color_answer"
                android:textSize="@dimen/d18sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/d1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/d10dp"
            android:layout_marginLeft="@dimen/d10dp"
            android:layout_marginTop="@dimen/d10dp"
            android:background="@color/color_teacher_headers" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/d10dp">


            <ImageView
                android:id="@+id/img_preview_question_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d15dp"
                android:background="@drawable/img_item_move" />

            <ImageView
                android:id="@+id/img_preview_question_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d15dp"
                android:background="@drawable/img_edit_question"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_preview_question_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d15dp"
                android:background="@drawable/img_copy_question" />

            <ImageView
                android:id="@+id/img_preview_question_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d15dp"
                android:background="@drawable/img_delete_question" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1dp"
        android:background="@color/color_teacher_headers" />

</LinearLayout>
