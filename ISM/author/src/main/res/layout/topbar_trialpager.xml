<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_tab_activity"
        android:layout_width="@dimen/d170dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tab_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="@dimen/d10dp"
                android:paddingTop="@dimen/d10dp"
                android:text="@string/stractivity"
                android:textColor="@color/color_black"
                android:textSize="@dimen/d18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_sep_tab_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d5dp"
            android:layout_gravity="bottom|center_vertical"
            android:background="@color/color_orange" />
    </FrameLayout>

    <ImageView
        android:layout_width="@dimen/d1dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/d5dp"
        android:background="@color/news_feed_separator_color" />

    <FrameLayout
        android:id="@+id/fl_tab_exam"
        android:layout_width="@dimen/d170dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tab_exam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="@dimen/d10dp"
                android:paddingTop="@dimen/d10dp"
                android:text="@string/strexam"
                android:textColor="@color/color_black"
                android:textSize="@dimen/d18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_sep_tab_exam"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d5dp"
            android:layout_gravity="bottom|center_vertical"
            android:background="@color/color_orange"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>