<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/d10dp">


        <TextView
            android:id="@+id/tv_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strquestion"
            android:textColor="@color/color_orange"
            android:textSize="@dimen/d22sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5dp">

            <TextView
                android:id="@+id/tv_question_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_question_createdby"
                android:text="@string/strbook"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/d20sp" />

            <TextView
                android:id="@+id/tv_question_createdby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/strcreatedby"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/d20sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5dp"
            android:singleLine="true"
            android:text="@string/strquestion"
            android:textColor="@color/color_question"
            android:textSize="@dimen/d22sp" />


        <LinearLayout
            android:id="@+id/ll_question_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>

        <TextView
            android:id="@+id/tv_question_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10dp"
            android:text="@string/strquestion"
            android:textColor="@color/color_answer"
            android:textSize="@dimen/d18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_dropdown_view_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/image_dropdown_open_close" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1dp"
                android:background="@color/questionlistseparator" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/d10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_question_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d10dp"
                    android:background="@drawable/img_edit_question"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_question_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_copy_question" />

                <ImageView
                    android:id="@+id/img_question_addtofavourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:background="@drawable/image_favourite" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/chk_select_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_checkbox_question_selection"
                android:checked="false" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1dp"
        android:background="@color/questionlistseparator" />
</LinearLayout>
