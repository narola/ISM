<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".fragment.userprofile.MyFeedsFragment">

    <include
        android:id="@+id/rl_new_post"
        layout="@layout/post_feed_layout" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_new_post"></android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="@dimen/d20dp"
        android:layout_height="@dimen/d30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/d300dp"
        android:background="@drawable/shape_triangle_profile_controller" />
</RelativeLayout>
