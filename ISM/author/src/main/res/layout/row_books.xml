<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="200dp"
        android:src="@drawable/img_row_divider_books" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_book_one"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/d10dp"
            android:src="@drawable/img_no_cover_available" />

        <ImageView
            android:id="@+id/img_book_two"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:layout_margin="@dimen/d10dp"
            android:layout_toRightOf="@+id/img_book_one"
            android:src="@drawable/img_no_cover_available" />

        <ImageView
            android:id="@+id/img_book_three"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:layout_margin="@dimen/d10dp"
            android:layout_toRightOf="@+id/img_book_two"
            android:src="@drawable/img_no_cover_available" />

        <ImageView
            android:id="@+id/img_book_four"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:layout_margin="@dimen/d10dp"
            android:layout_toRightOf="@+id/img_book_three"
            android:src="@drawable/img_no_cover_available" />
    </RelativeLayout>

</RelativeLayout>