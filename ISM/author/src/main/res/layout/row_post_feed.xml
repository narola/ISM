<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d15dp"
    android:background="@drawable/news_feed_post_box"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d15dp"
        android:orientation="horizontal">


        <com.ism.author.views.CircleImageView
            android:id="@+id/img_dp_post_creator"
            android:layout_width="@dimen/dp_post_creater_image_width_height"
            android:layout_height="@dimen/dp_post_creater_image_width_height"
            android:layout_gravity="top"
            android:layout_margin="@dimen/d15dp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/d10dp"
            android:src="@drawable/userdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_post_creater_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10dp"
                android:text="@string/emaamall"
                android:textColor="@color/color_black"
                android:textSize="@dimen/d25dp" />

            <TextView
                android:id="@+id/txt_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="@dimen/d10dp"
                android:text=""
                android:textColor="@color/color_gray"
                android:textSize="@dimen/d18dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/d5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/audioplay"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d5dp"
                    android:background="@drawable/bg_highscore_subjectlist"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_video"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/audio_play"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_image"
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_post_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d5dp"
                        android:src="@drawable/image_like" />


                    <TextView
                        android:id="@+id/txt_post_total_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d10dp"
                        android:text="23"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/d18dp" />


                    <ImageView
                        android:id="@+id/img_post_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d5dp"
                        android:src="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/txt_post_total_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d10dp"
                        android:text="7"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/d18dp" />

                    <TextView
                        android:id="@+id/txt_comment_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d10dp"
                        android:text="@string/strviewall"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/d20dp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/img_post_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/d5dp"
                    android:src="@drawable/ic_friend_tag_active" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_comment_inflater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_writeComment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d70dp"
            android:layout_marginBottom="@dimen/d10dp"
            android:layout_marginLeft="@dimen/d15dp"
            android:layout_marginRight="@dimen/d15dp"
            android:layout_marginTop="@dimen/d10dp"
            android:background="@drawable/selector"
            android:hint="@string/strwriteyourcommenthere"
            android:padding="15sp"
            android:textColorHint="@color/color_text_hint" />

        <TextView
            android:id="@+id/txt_add_comment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d20dp"
            android:background="@color/color_dark_gray"
            android:gravity="center"
            android:padding="@dimen/d5dp"
            android:text="@string/strcomment"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20dp"
            android:textStyle="bold" />


    </RelativeLayout>


</LinearLayout>
