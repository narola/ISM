<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_book_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/desk_tab_bg"
        android:orientation="horizontal"
        android:padding="@dimen/d10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search_author_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/img_search_gray" />

            <EditText
                android:id="@+id/et_search_author_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/d10dp"
                android:hint="@string/hint_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="@dimen/d8dp"
                android:singleLine="true"
                android:textColor="@color/color_blue"
                android:textColorHint="@color/border_gray"
                android:textSize="@dimen/d18sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_author_books"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_book_search"
        android:layout_centerHorizontal="true"
        android:background="@color/color_white"
        android:padding="@dimen/d15dp" />

    <include
        layout="@layout/include_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_book_search"
        android:layout_centerInParent="true" />


    <View
        android:layout_width="@dimen/d35dp"
        android:layout_height="@dimen/d35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dMinus10dp"
        android:layout_marginTop="@dimen/d270dp"
        android:background="@drawable/indicator_dark_grey" />


</RelativeLayout>
