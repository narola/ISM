<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_book_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/desk_tab_bg"
        android:orientation="horizontal"
        android:padding="@dimen/d10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search_suggested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/img_search_gray" />

            <EditText
                android:id="@+id/et_search_suggested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/d10dp"
                android:hint="@string/hint_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="@dimen/d10dp"
                android:singleLine="true"
                android:textColor="@color/color_blue"
                android:textColorHint="@color/border_gray"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_book_search"
        android:layout_centerInParent="true"
        android:background="@drawable/news_feed_post_box"
        android:padding="@dimen/d15dp" />


</RelativeLayout>
