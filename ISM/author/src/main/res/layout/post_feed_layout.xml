<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_post"
    tools:context="com.ism.author.fragment.HomeFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_feed_post_box"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d10dp">

            <ImageView
                android:id="@+id/img_add_emoticons_in_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_emoticons" />

            <EditText
                android:id="@+id/et_writePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_add_emoticons_in_post"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:enabled="false"
                android:hint="@string/sayit"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:lines="4"
                android:textColorHint="@color/color_text_hint" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/color_blue"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/img_attach_file_in_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/link" />

                <ImageView
                    android:id="@+id/img_attach_image_in_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img" />

                <ImageView
                    android:id="@+id/img_tag_in_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/friend_post" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:background="@color/color_dark_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_add_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow"
                    android:gravity="center"
                    android:drawablePadding="@dimen/d10dp"
                    android:text="@string/strpost"
                    android:textAllCaps="true"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/d20dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
