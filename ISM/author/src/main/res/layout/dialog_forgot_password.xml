<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ism.commonsource.view.ActionProcessButton
        android:id="@+id/prog_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/d15dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/stremailaddress"
        android:padding="20dp"
        android:textSize="@dimen/controller_top_menu_text_size" />
</LinearLayout>