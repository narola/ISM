<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="horizontal"
    tools:context="com.ism.fragment.userprofile.AboutMeFragment">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_profile_pic"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/d10dp"
            android:scaleType="fitXY"
            android:src="@drawable/userdp" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/d10dp"
            android:paddingBottom="@dimen/d10dp"
            android:text="Roger S. Pressman"
            android:textAllCaps="true"
            android:textColor="@color/color_green"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_total_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/d10dp"
            android:paddingBottom="@dimen/d10dp"
            android:text="Books 26"
            android:textColor="@color/bg_app_dark"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9" />

        <TextView
            android:id="@+id/txt_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/desk_tab_bg"
            android:gravity="left|center_vertical"
            android:paddingTop="@dimen/d10dp"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/d10dp"
            android:text="@string/strEducation"
            android:textColor="@color/bg_app_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_education_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/desk_tab_bg"
            android:gravity="left"
            android:paddingTop="@dimen/d10dp"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/d10dp"
            android:text="University of Connecticut"
            android:textColor="@color/bg_app_dark"
            android:paddingBottom="@dimen/d10dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9" />

           <TextView
            android:id="@+id/txt_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:drawableLeft="@drawable/birthday"
            android:drawablePadding="@dimen/d10dp"
            android:padding="@dimen/d10dp"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#cacaca" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:id="@+id/ll_top"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d3dp"
                    android:text="SOCIAL"
                    android:textSize="@dimen/d18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="0"
                            android:textColor="@color/color_blue"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_total_post"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Post"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#cacaca"
                        android:padding="@dimen/d3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_Studymates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="0"
                            android:textColor="@color/color_blue"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_studymates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Studymates"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/d15dp"
                    android:layout_marginRight="@dimen/d15dp"
                    android:background="#cacaca"
                    android:padding="@dimen/d3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_total_author_followed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d3dp"
                        android:text="0"
                        android:textColor="@color/color_blue"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/txt_author_followed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d3dp"
                        android:text="Author Follwed"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/d10dp"
                android:layout_marginTop="@dimen/d10dp"
                android:background="#e8e8e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_academic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d3dp"
                    android:text="ACADEMIC"
                    android:textSize="@dimen/d18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_ism_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="0"
                            android:textColor="@color/color_green"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_ism_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="ISM Score"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#cacaca"
                        android:padding="@dimen/d3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_ism_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="0"
                            android:textColor="@color/color_green"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_ism_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="ISM Rank"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/d15dp"
                    android:layout_marginRight="@dimen/d15dp"
                    android:background="#cacaca"
                    android:padding="@dimen/d3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_exam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="0"
                            android:textColor="@color/color_green"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_exam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Exams"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#cacaca"
                        android:padding="@dimen/d5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_assignment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="0"
                            android:textColor="@color/color_green"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_assignment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Assignment"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/d10dp"
                android:layout_marginTop="@dimen/d10dp"
                android:background="#e8e8e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_excellence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d3dp"
                    android:text="EXCELLENCE"
                    android:textSize="@dimen/d18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_que_asked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="0"
                            android:textColor="@color/red_error"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_que_asked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_total_post"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Question Asked"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="#cacaca"
                        android:padding="@dimen/d3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_fav_questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="0"
                            android:textColor="@color/red_error"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txt_fav_questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/d3dp"
                            android:text="Favorite Questions"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/d15dp"
                    android:layout_marginRight="@dimen/d15dp"
                    android:background="#cacaca"
                    android:padding="@dimen/d3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_total_badges_earned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d3dp"
                        android:text="0"
                        android:textColor="@color/red_error"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/txt_badges_earned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/d3dp"
                        android:text="Badges Earned"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_top"
            android:background="#f5f5f5"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/d10dp"
                android:layout_marginRight="@dimen/d10dp"
                android:layout_marginLeft="@dimen/d10dp"
                android:layout_marginBottom="@dimen/d10dp"
                android:background="@drawable/bg_white_border_gray"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_About_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/d10dp"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/d20sp" />
                <TextView
                    android:id="@+id/txt_About_author_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/d5dp"
                    android:text=""
                    android:textSize="@dimen/d18sp" />
                <TextView
                    android:id="@+id/txt_book_by_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/d10dp"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/d20sp" />
                <TextView
                    android:id="@+id/txt_book_by_author_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/d5dp"
                    android:text=""
                    android:textSize="@dimen/d18sp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#e8e8e8" />-->


    </RelativeLayout>
</LinearLayout>