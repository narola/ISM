<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="horizontal"
    tools:mContext="com.ism.fragment.userProfile.AboutMeFragment">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_profile_pic"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/d10dp"
            android:background="@drawable/bg_about_me_img"
            android:scaleType="centerCrop"
            android:src="@drawable/userdp" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10dp"
            android:textColor="@color/color_green"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/assignment_separator" />

        <TextView
            android:id="@+id/txt_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10dp"
            android:background="@color/fragment_background_color"
            android:gravity="left|center_vertical"
            android:padding="@dimen/d10dp"
            android:text="@string/strEducation"
            android:textColor="@color/bg_app_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_education_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10dp"
            android:background="@color/fragment_background_color"
            android:gravity="left"
            android:paddingBottom="@dimen/d10dp"
            android:paddingLeft="@dimen/d10dp"
            android:paddingRight="@dimen/d10dp"
            android:text="University of Connecticut"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/assignment_separator" />

        <TextView
            android:id="@+id/txt_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:drawableLeft="@drawable/birthday"
            android:drawablePadding="@dimen/d10dp"
            android:gravity="center"
            android:padding="@dimen/d10dp"
            android:textColor="@color/bg_app_dark"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/assignment_separator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/fragment_background_color"
            android:orientation="horizontal"
            android:padding="@dimen/d20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d10dp"
                    android:text="@string/strsocial"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/d15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_violet_assignment"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_total_post"
                            android:layout_marginTop="@dimen/d3dp"
                            android:gravity="center"
                            android:text="@string/strfollowing"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/d5dp"
                        android:layout_marginTop="@dimen/d5dp"
                        android:background="@color/assignment_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_violet_assignment"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d3dp"
                            android:text="@string/strfollowers"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/assignment_separator"
                    android:padding="@dimen/d5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_total_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="0"
                        android:textColor="@color/color_violet_assignment"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d3dp"
                        android:text="@string/strpost"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/d10dp"
                android:background="@color/assignment_separator" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_academic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d10dp"
                    android:text="@string/stracademic"
                    android:textAllCaps="true"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/d15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_exam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/btn_save"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_exam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d3dp"
                            android:text="@string/strexamcreated"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/d5dp"
                        android:layout_marginTop="@dimen/d5dp"
                        android:background="@color/assignment_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_assignment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/btn_save"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_assignment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d3dp"
                            android:gravity="center"
                            android:text="@string/strassignmentcreated"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/assignment_separator"
                    android:padding="@dimen/d5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_total_books"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/btn_save"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_books"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d3dp"
                        android:gravity="center"
                        android:text="@string/strBooks"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/d10dp"
                android:background="@color/assignment_separator" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_excellence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/d10dp"
                    android:text="@string/strexcellence"
                    android:textAllCaps="true"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/d15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_que_answered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/red_error"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_que_answered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_total_post"
                            android:layout_marginTop="@dimen/d3dp"
                            android:gravity="center"
                            android:text="@string/strquestionanswered"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/d5dp"
                        android:layout_marginTop="@dimen/d5dp"
                        android:background="@color/assignment_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_total_fav_questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/red_error"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_fav_questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d3dp"
                            android:gravity="center"
                            android:text="@string/strfavouritequestions"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/d10dp"
                    android:background="@color/assignment_separator"
                    android:padding="@dimen/d5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_total_badges_earned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/red_error"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_badges_earned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d3dp"
                        android:gravity="center"
                        android:text="@string/strbadgesearned"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_top"
            android:background="@color/fragment_background_color"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/d10dp"
                android:layout_marginLeft="@dimen/d10dp"
                android:layout_marginRight="@dimen/d10dp"
                android:background="@drawable/bg_white_border_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_About_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/d5dp"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/d10dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/btn_save"
                        android:textSize="@dimen/d22sp" />

                    <TextView
                        android:id="@+id/txt_About_author_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d10dp"
                        android:layout_marginLeft="@dimen/d15dp"
                        android:layout_marginRight="@dimen/d10dp"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/d10dp"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/d20sp" />

                    <TextView
                        android:id="@+id/txt_book_by_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/d10dp"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/d10dp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/color_green"
                        android:textSize="@dimen/d22sp" />

                    <TextView
                        android:id="@+id/txt_book_by_author_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/d10dp"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/d5dp"
                        android:text=""
                        android:textSize="@dimen/d20sp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>