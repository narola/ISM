<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_highscore_subjectlist"
    android:orientation="vertical"
    android:weightSum="10.8"
    tools:context="com.ism.author.fragment.TrialExamObjectiveDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_highscore_subjectlist"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:background="@drawable/shadow_bg_trial_exam_details"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txt_exam_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/d5dp"
                    android:text="@string/strexamtype_colon"
                    android:textSize="@dimen/d18sp" />

                <TextView
                    android:id="@+id/txt_exam_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_exam_type"
                    android:padding="@dimen/d5dp"
                    android:text=""
                    android:textColor="@color/bg_assessment"
                    android:textSize="@dimen/d18sp" />

                <TextView
                    android:id="@+id/txt_exam_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/d5dp"
                    android:text=""
                    android:textColor="@color/color_pink"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/img_copy"
                    android:src="@drawable/img_edit_question" />

                <ImageView
                    android:id="@+id/img_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/img_copy_question" />

                <TextView
                    android:id="@+id/txt_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_exam_type"
                    android:layout_toStartOf="@+id/txt_class_name"
                    android:padding="@dimen/d5dp"
                    android:text="@string/strClass_colon"
                    android:textSize="@dimen/d18sp" />

                <TextView
                    android:id="@+id/txt_class_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_exam_type_name"
                    android:layout_toEndOf="@+id/txt_exam_type"
                    android:padding="@dimen/d5dp"
                    android:text=""
                    android:textColor="@color/bg_assessment"
                    android:textSize="@dimen/d18sp" />

                <TextView
                    android:id="@+id/txt_book_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_exam_name"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/d5dp"
                    android:text="Book Name: "
                    android:textSize="@dimen/d18sp" />
                <TextView
                    android:id="@+id/txt_book_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_exam_name"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/txt_book_name"
                    android:padding="@dimen/d5dp"
                    android:text=""
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/d18sp" />
                <TextView
                    android:id="@+id/txt_exam_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/img_copy"
                    android:padding="@dimen/d5dp"
                    android:text=""
                    android:textColor="@color/bg_assessment"
                    android:textSize="@dimen/d18sp" />

                <TextView
                    android:id="@+id/txt_exam_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_copy"
                    android:layout_toLeftOf="@+id/txt_exam_date_value"
                    android:padding="@dimen/d5dp"
                    android:text="Exam date :"
                    android:textSize="@dimen/d18sp" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@color/color_white" />
    </LinearLayout>

</LinearLayout>