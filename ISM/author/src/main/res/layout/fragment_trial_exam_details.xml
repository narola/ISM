<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:context="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="10.5"
    tools:context="com.ism.author.fragment.TrialExamDetailFragment">

    <LinearLayout
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/shadow_bg_trial_exam_details"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_exam_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="@dimen/d5dp"
                android:textSize="@dimen/d18sp"
                android:text="@string/strexamtype_colon" />

            <TextView
                android:id="@+id/txt_exam_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_exam_type"
                android:padding="@dimen/d5dp"
                android:textSize="@dimen/d18sp"
                android:textColor="@color/bg_assessment"
                android:text="@string/strexamtype" />

            <TextView
                android:id="@+id/txt_exam_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textColor="@color/color_pink"
                android:padding="@dimen/d5dp"
                android:text="Name of the Exam" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/img_edit"
                android:layout_toLeftOf="@+id/img_copy"
                android:src="@drawable/img_edit_question" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:id="@+id/img_copy"
                android:src="@drawable/img_copy_question" />
            <TextView
                android:id="@+id/txt_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d5dp"
                android:textSize="@dimen/d18sp"
                android:text="@string/strClass_colon"
                android:layout_below="@+id/txt_exam_type"
                android:layout_toStartOf="@+id/txt_class_name" />

            <TextView
                android:id="@+id/txt_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d5dp"
                android:textSize="@dimen/d18sp"
                android:textColor="@color/bg_assessment"
                android:text="@string/strclass"
                android:layout_below="@+id/txt_exam_type_name"
                android:layout_toEndOf="@+id/txt_exam_type" />

            <TextView
                android:id="@+id/txt_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d5dp"
                android:text="Book Neme: Sci"
                android:textSize="@dimen/d18sp"
                android:layout_below="@+id/txt_exam_name"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txt_exam_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d5dp"
                android:textSize="@dimen/d18sp"
                android:textColor="@color/bg_assessment"
                android:text="29th Oct 2015"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/img_copy" />
            <TextView
                android:id="@+id/txt_exam_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d5dp"
                android:text="Exam date :"
                android:textSize="@dimen/d18sp"
                android:layout_below="@+id/img_copy"
                android:layout_toLeftOf="@+id/txt_exam_date_value"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />
</LinearLayout>