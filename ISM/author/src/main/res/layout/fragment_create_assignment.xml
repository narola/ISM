<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1dp"
        android:background="@color/news_feed_separator_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="@dimen/d15dp">


        <TextView
            android:id="@+id/tv_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strassignmentinfo"
            android:textSize="@dimen/d20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_activity_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green"
                android:paddingBottom="@dimen/d10dp"
                android:paddingLeft="@dimen/d15dp"
                android:paddingRight="@dimen/d15dp"
                android:paddingTop="@dimen/d10dp"
                android:text="@string/strsave"
                android:textAllCaps="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/d20sp" />


            <TextView
                android:id="@+id/tv_activity_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15dp"
                android:background="@drawable/btn_cancel"
                android:paddingBottom="@dimen/d10dp"
                android:paddingLeft="@dimen/d15dp"
                android:paddingRight="@dimen/d15dp"
                android:paddingTop="@dimen/d10dp"
                android:text="@string/strcancel"
                android:textAllCaps="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/d20sp" />


        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1dp"
        android:background="@color/news_feed_post_box_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/d20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_activity_assignmentname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:text="@string/strassignmentname"
                    android:textSize="@dimen/d20sp" />

                <EditText
                    android:id="@+id/et_activity_assignmentname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/d5dp"
                    android:background="@drawable/selector"
                    android:padding="@dimen/d20dp"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_activity_coursename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:text="@string/strcoursename"
                    android:textSize="@dimen/d20sp" />

                <EditText
                    android:id="@+id/et_activity_coursename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/d5dp"
                    android:background="@drawable/selector"

                    android:padding="@dimen/d20dp"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d20sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d15dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_activity_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:text="@string/strclass"
                    android:textSize="@dimen/d20sp" />

                <Spinner
                    android:id="@+id/sp_activity_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d5dp"
                    android:layout_marginTop="@dimen/d5dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_selector"
                    android:entries="@array/list"
                    android:padding="@dimen/d20dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_activity_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:text="@string/strsubject"
                    android:textSize="@dimen/d20sp" />

                <Spinner
                    android:id="@+id/sp_activity_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d5dp"
                    android:layout_marginTop="@dimen/d5dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_selector"
                    android:entries="@array/list"
                    android:padding="@dimen/d20dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_activity_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:text="@string/strtopic"
                    android:textSize="@dimen/d20sp" />

                <Spinner
                    android:id="@+id/sp_activity_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d5dp"
                    android:layout_marginTop="@dimen/d5dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_selector"
                    android:entries="@array/list"
                    android:padding="@dimen/d20dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_activity_submissiondate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10dp"
                    android:text="@string/strsubmissiondate"
                    android:textSize="@dimen/d20sp" />

                <EditText
                    android:id="@+id/et_activity_submissiondate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/d5dp"
                    android:background="@drawable/selector"
                    android:editable="false"
                    android:gravity="center_vertical"
                    android:padding="@dimen/d20sp"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/d20sp" />
            </LinearLayout>
        </LinearLayout>


        <com.narola.kpa.richtexteditor.view.RichTextEditor
            android:id="@+id/rte_trial_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rich_text_editor_height"></com.narola.kpa.richtexteditor.view.RichTextEditor>
    </LinearLayout>


</LinearLayout>
