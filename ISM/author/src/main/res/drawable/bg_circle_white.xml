<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="oval">

            <solid android:color="#90BABABA" />
            <corners android:radius="@dimen/d5dp" />
            <size
                android:width="@dimen/d70dp"
                android:height="@dimen/d70dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3px">

        <shape android:shape="oval">

            <solid android:color="#FFFFFF" />
            <corners android:radius="@dimen/d7dp" />
            <size
                android:width="@dimen/d75dp"
                android:height="@dimen/d75dp" />

        </shape>

    </item>


</layer-list>
