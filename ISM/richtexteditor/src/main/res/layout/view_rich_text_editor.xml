<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_control_bar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/controlbar_padding"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/action_undo"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_left"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_undo" />

            <ImageButton
                android:id="@+id/action_redo"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_right"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:layout_marginRight="@dimen/controlbar_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_redo" />

            <ImageButton
                android:id="@+id/action_bold"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_left"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_bold" />

            <ImageButton
                android:id="@+id/action_italic"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_center"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_italic" />

            <ImageButton
                android:id="@+id/action_strikethrough"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_center"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_strikeout" />

            <ImageButton
                android:id="@+id/action_underline"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_right"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:layout_marginRight="@dimen/controlbar_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_underline" />

            <ImageButton
                android:id="@+id/action_subscript"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_left"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_subscript" />

            <ImageButton
                android:id="@+id/action_superscript"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_right"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:layout_marginRight="@dimen/controlbar_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_superscript" />

            <ImageButton
                android:id="@+id/action_txt_color"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button"
                android:layout_marginRight="@dimen/controlbar_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_font_color" />

            <ImageButton
                android:id="@+id/action_align_left"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_left"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_align_left" />

            <ImageButton
                android:id="@+id/action_align_center"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_center"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_align_center" />

            <ImageButton
                android:id="@+id/action_align_right"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_right"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:layout_marginRight="@dimen/controlbar_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_align_right" />

            <ImageButton
                android:id="@+id/action_create_link"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_left"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_create_link" />

            <ImageButton
                android:id="@+id/action_remove_link"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_right"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:layout_marginRight="@dimen/controlbar_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_remove_link" />

            <ImageButton
                android:id="@+id/action_ordered_list"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_left"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_ordered_list" />

            <ImageButton
                android:id="@+id/action_unordered_list"
                android:layout_width="@dimen/button_dimen"
                android:layout_height="@dimen/button_dimen"
                android:background="@drawable/bg_button_right"
                android:layout_marginLeft="@dimen/button_bg_padding"
                android:contentDescription="@null"
                android:padding="@dimen/button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/img_unordered_list" />

        </LinearLayout>
    </HorizontalScrollView>

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/rich_editor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@android:color/white"></jp.wasabeef.richeditor.RichEditor>

</merge>
