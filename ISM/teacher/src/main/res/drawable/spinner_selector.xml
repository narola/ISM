<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state -->
    <item android:state_enabled="false" android:drawable="@drawable/shadow_gray"/>
    <!-- pressed state -->
    <item android:state_enabled="true" android:state_window_focused="true" android:state_pressed="true" android:drawable="@drawable/shadow_green"/>
    <!-- unselected state -->
    <item android:state_enabled="true" android:state_focused="true" android:state_window_focused="true" android:drawable="@drawable/shadow_green"/>
    <!-- dropdown list state -->
    <item android:state_enabled="true" android:state_focused="true" android:drawable="@drawable/shadow_green"/>
    <!-- default -->
    <item android:drawable="@drawable/shadow_gray"/>
</selector>