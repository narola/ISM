<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d130dp"
    android:layout_height="@dimen/d130dp"
    android:padding="@dimen/d10dp"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_postfeed_files">

        <ImageView
            android:id="@+id/img_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:visibility="gone" />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/img_play"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
        <!--<VideoView-->
            <!--android:id="@+id/video"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:visibility="gone" />-->

        <!--<ImageView-->
            <!--android:id="@+id/img_audio"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:visibility="gone" />-->

    </RelativeLayout>
    <TextView
        android:id="@+id/txt_video"
        android:layout_width="@dimen/d20dp"
        android:layout_height="@dimen/d20dp"
        android:visibility="gone"
        android:textColor="@color/color_blue"
        android:layout_alignLeft="@+id/rl_image"
        android:layout_alignBottom="@+id/rl_image"
        android:drawableLeft="@drawable/arrow" />

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="@dimen/d15dp"
        android:layout_height="@dimen/d15dp"
        android:padding="@dimen/d10dp"
        android:background="@drawable/img_cancel"
        android:visibility="visible"
        android:gravity="center"
        android:layout_alignRight="@+id/rl_image"
        android:layout_alignTop="@+id/rl_image"
        />
    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="@dimen/d20dp"
        android:layout_height="@dimen/d20dp"
        android:padding="@dimen/d5dp"
        android:background="@drawable/img_edit"
        android:visibility="gone"
        android:gravity="center"
        android:layout_alignRight="@+id/rl_image"
        android:layout_alignBottom="@+id/rl_image"
        />
</RelativeLayout>