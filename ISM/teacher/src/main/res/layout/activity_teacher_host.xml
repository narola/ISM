<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_controller_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controller_top_height"
        android:background="@drawable/bg_controller_top">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="match_parent"
            android:background="@drawable/bg_right_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/logo_blue" />

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="@dimen/controller_top_small_button_width"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_logo"
            android:background="@drawable/bg_right_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_home_teacher" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rl_add_post"
            android:layout_toRightOf="@id/img_home"
            android:gravity="center"
            android:textSize="@dimen/controller_top_menu_text_size"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_controller_top_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_search"
            android:layout_toRightOf="@id/img_home"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/controller_top_small_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/bg_right_controller_top_button"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/sp_submenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_back"
                android:popupBackground="@color/bg_controller_top_dark"
                android:visibility="gone"></Spinner>

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/img_back"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_one"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_two"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_three"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_four"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_six"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_five"
                android:background="@drawable/bg_left_controller_top_button"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_controller_top_action"
                android:gravity="center"
                android:paddingLeft="@dimen/controller_menu_text_padding"
                android:paddingRight="@dimen/controller_menu_text_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/controller_top_menu_text_size"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_post"
            android:layout_width="@dimen/d120dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_search"
            android:background="@drawable/bg_add_post"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_add_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="ADD POST"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/d15sp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_upcomings"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/controller_top_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/bg_left_controller_top_button"
                android:scaleType="centerInside"
                android:src="@drawable/image_search_teacher" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:hint="@string/hint_search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/color_graylight"
                android:visibility="gone" />
        </LinearLayout>

        <!-- right side bar controls-->
        <ImageView
            android:id="@+id/img_upcomings"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_teacher_profile"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_notes_teacher" />

        <ImageView
            android:id="@+id/img_teacher_profile"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_chat"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_teacher_profile" />

        <ImageView
            android:id="@+id/img_chat"
            android:layout_width="@dimen/controller_top_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_left_controller_top_button"
            android:scaleType="centerInside"
            android:src="@drawable/image_chat_teacher" />
    </RelativeLayout>


    <!-- left side bar controls-->
    <LinearLayout
        android:id="@+id/ll_controller_left"
        android:layout_width="@dimen/controller_left_width"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:background="@drawable/bg_controller_top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tutorial_teacher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_tutorial"
            android:onClick="openMainContainerFragment"
            android:scaleType="centerInside"
            android:src="@drawable/image_tutorial_group" />

        <ImageView
            android:id="@+id/img_office"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_assessment"
            android:onClick="openMainContainerFragment"
            android:scaleType="centerInside"
            android:src="@drawable/image_office" />

        <ImageView
            android:id="@+id/img_assessment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_assessment"
            android:scaleType="centerInside"
            android:src="@drawable/image_assessment"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_desk"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_desk"
            android:scaleType="centerInside"
            android:src="@drawable/image_desk"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_reportcard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_controller_left_button_report_card"
            android:scaleType="centerInside"
            android:src="@drawable/image_report_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_logout"
            android:layout_width="@dimen/controller_left_width"
            android:layout_height="@dimen/controller_left_width"
            android:background="@color/color_blue"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logout" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_controller_top"
        android:layout_toLeftOf="@+id/fl_fragment_container_right"
        android:layout_toRightOf="@id/ll_controller_left" />

    <FrameLayout
        android:id="@+id/fl_fragment_container_right"
        android:layout_width="@dimen/content_right_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_controller_top"
        android:background="@android:color/darker_gray" />

    <com.ism.commonsource.view.ActionProcessButton
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d5dp"
        app:pb_colorComplete="@color/color_dark_gray"
        app:pb_colorNormal="@color/color_dark_gray"
        app:pb_colorPressed="@color/color_dark_gray"
        app:pb_colorProgress="@color/purple_progress" />

</RelativeLayout>
