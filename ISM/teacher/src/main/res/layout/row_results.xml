<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="0.01dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_parent_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_news_feed"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d150dp">

            <RelativeLayout
                android:id="@+id/rl_notes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d100dp"
                android:background="@drawable/bg_subject_yellow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d10dp"
                    android:singleLine="true"
                    android:text="@string/strtest"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_exam_name"
                    android:layout_width="@dimen/d170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/d10dp"
                    android:layout_marginLeft="@dimen/d15dp"
                    android:layout_marginTop="@dimen/d40dp"
                    android:background="@drawable/btn_dark_grey"
                    android:singleLine="false"
                    android:text="@string/strtest"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d15sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_notes"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_submission_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d10dp"
                    android:text="@string/strsubmissiondate"
                    android:textSize="@dimen/d15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_class_name"
                android:layout_width="@dimen/d100dp"
                android:layout_height="@dimen/d100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/d20dp"
                android:layout_marginRight="@dimen/d15dp"
                android:background="@drawable/bg_circle_white"
                android:gravity="center"
                android:padding="@dimen/d15dp"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/color_green"
                android:textSize="@dimen/d18sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/assignment_separator" />

        <!-- Freeze result-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/d8dp">

            <TextView
                android:id="@+id/tv_assignment_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Assignment 1"
                android:textColor="@color/color_blue_assignment_type"
                android:textSize="@dimen/d14sp" />

            <TextView
                android:id="@+id/tv_freeze_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_freeze_result_green"
                android:text="@string/str_freezeresult"
                android:textColor="@color/white"
                android:textSize="@dimen/d14sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/assignment_separator" />


        <TextView
            android:id="@+id/tv_total_submissions_evaluated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/d8dp"
            android:text="Total Questions Evaluated"
            android:textSize="@dimen/d16sp" />

    </LinearLayout>


</android.support.v7.widget.CardView>