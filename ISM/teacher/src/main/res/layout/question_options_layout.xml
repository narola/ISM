<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/d10dp">

    <ImageView
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/radio_button_unselect" />

    <EditText
        android:id="@+id/et_question_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10dp"
        android:layout_toLeftOf="@+id/img_add_row"
        android:layout_toRightOf="@+id/radio"
        android:background="@drawable/bg_news_feed"
        android:minLines="2" />

    <ImageView
        android:id="@+id/img_add_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/img_remove_row"
        android:background="@drawable/ic_add_row"
        android:padding="5dp"
        android:visibility="invisible"

        />

    <ImageView
        android:id="@+id/img_remove_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_remove"
        android:padding="5dp"
        android:visibility="invisible" />
</RelativeLayout>