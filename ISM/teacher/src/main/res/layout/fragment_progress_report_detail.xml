<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ll Top row -->
    <LinearLayout
        android:id="@+id/ll_date_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_range"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/str_date_range"
            android:textSize="@dimen/d20sp" />

        <!-- Containerof right side controls of date range-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5dp"
            android:orientation="horizontal">

            <!-- Ll report from-->
            <LinearLayout
                android:id="@+id/ll_report_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_startdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector"
                    android:editable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/str_from"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="@dimen/d20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dminus8dp"
                    android:background="@drawable/btn_calendar" />
            </LinearLayout>

            <!-- Ll report two-->
            <LinearLayout
                android:id="@+id/ll_report_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_enddate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector"
                    android:editable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/str_to"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="@dimen/d20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dminus8dp"
                    android:background="@drawable/btn_calendar" />
            </LinearLayout>

            <!-- Spinner exam type-->
            <Spinner
                android:id="@+id/sp_exam_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d10dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_selector"
                android:entries="@array/list"
                android:padding="@dimen/d10dp"
                android:spinnerMode="dropdown" />

            <!-- Ll  toggle report view-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_graph_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_grid" />

                <ImageView
                    android:id="@+id/img_list_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_grid" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!-- Middle student info-->
    <RelativeLayout
        android:id="@+id/rl_student_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_date_range"
        android:padding="@dimen/d10dp">

        <ImageView
            android:id="@+id/img_student"
            android:layout_width="@dimen/d50dp"
            android:layout_height="@dimen/d50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/userdp" />

        <LinearLayout
            android:id="@+id/ll_student_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d20dp"
            android:layout_toRightOf="@+id/img_student"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strtest"
                android:textSize="@dimen/d18sp"
                android:textColor="@color/color_pink"/>

            <TextView
                android:id="@+id/tv_student_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strtest"
                android:textSize="@dimen/d16sp" />

            <TextView
                android:id="@+id/tv_student_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strtest"
                android:textSize="@dimen/d14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strtest"
                android:textSize="@dimen/d18sp" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strtest"
                android:textSize="@dimen/d18sp" />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strtest"
                android:textSize="@dimen/d18sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Last STudent Subject Report-->

</RelativeLayout>