<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/grey_indicator" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d15dp"
            android:layout_toRightOf="@+id/img_indicator"
            android:background="@drawable/bg_exam_options"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_save_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d15sp"
                android:text="Save"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_cancel_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d15sp"
                android:text="Cancel"
                android:textColor="@color/white" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
