<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/d15dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d30dp">

    <TextView
        android:id="@+id/txt_notification_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/d3dp"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/d20sp" />

    <RadioGroup
        android:id="@+id/radigroup_yes_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_notification_name"
        android:layout_marginBottom="@dimen/d10dp"
        android:layout_marginTop="@dimen/d10dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d30dp">

        <RadioButton
            android:id="@+id/radiobutton_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="#323232"
            android:textSize="@dimen/d18sp" />

        <RadioButton
            android:id="@+id/radiobutton_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10dp"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="#323232"
            android:textSize="@dimen/d18sp" />
    </RadioGroup>

</RelativeLayout>