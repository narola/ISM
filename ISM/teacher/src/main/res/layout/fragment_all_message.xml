<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_light">

    <TextView
        android:id="@+id/txt_header_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d60dp"
        android:background="@drawable/bg_header_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d20dp"
        android:text="@string/str_messages"
        android:textColor="@color/bg_app_dark"
        android:textSize="@dimen/d20sp" />

    <ListView
        android:id="@+id/lv_all_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_header_white"
        android:layout_margin="@dimen/d15dp"
        android:background="@drawable/bg_white_border_gray"
        android:divider="@drawable/divider_gray_with_padding"
        android:dividerHeight="@dimen/d2dp"
        android:paddingLeft="@dimen/d20dp"
        android:paddingRight="@dimen/d20dp"
        android:paddingTop="@dimen/d5dp"></ListView>

    <ViewStub
        android:id="@+id/vs_message_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d20dp"
        android:inflatedId="@+id/rl_message"
        android:layout="@layout/layout_detailed_message"
        android:visibility="gone" />
</RelativeLayout>
