<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_dialog_add_text_richlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/d20dp"
        android:layout_marginLeft="@dimen/d60dp"
        android:layout_marginRight="@dimen/d60dp"
        android:layout_marginTop="@dimen/d20dp"
        android:background="@drawable/news_feed_post_box"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_dialog_add_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/color_blue"
            android:gravity="center"
            android:padding="@dimen/d10dp"
            android:text="@string/strtypetext"
            android:textColor="@color/white"
            android:textSize="@dimen/d20dp" />


        <com.narola.kpa.richtexteditor.view.RichTextEditor
            android:id="@+id/rte_dialog_add_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_dialog_add_text_title"
            android:layout_marginBottom="@dimen/d40dp"></com.narola.kpa.richtexteditor.view.RichTextEditor>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_add_text_done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_blue"
                android:gravity="center"
                android:paddingBottom="@dimen/d10dp"
                android:paddingTop="@dimen/d10dp"
                android:text="@string/strdone"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/d20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/tv_dialog_add_text_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_blue"
                android:gravity="center"
                android:paddingBottom="@dimen/d10dp"
                android:paddingTop="@dimen/d10dp"
                android:text="@string/strclose"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/d20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>