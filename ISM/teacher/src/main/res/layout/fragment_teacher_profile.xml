<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/content_right_width"
        android:layout_height="match_parent"
        android:background="@color/color_bg_teacher_profile"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_view_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10dp"
            android:orientation="horizontal">

            <com.ism.teacher.views.CircleImageView
                android:id="@+id/img_user_dp"
                android:layout_width="@dimen/d90dp"
                android:layout_height="@dimen/d90dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@drawable/userdp"
                app:civ_border_color="@color/circular_image_border_color"
                app:civ_border_width="@dimen/d1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_user_dp">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d5dp"
                    android:text="@string/strtest"
                    android:textAllCaps="true"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/d22sp"
                    android:layout_marginTop="@dimen/d10dp"/>

                <TextView
                    android:id="@+id/tv_view_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_name"
                    android:paddingLeft="@dimen/d5dp"
                    android:text="@string/str_viewprofile"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/d20sp"
                    android:layout_marginTop="@dimen/d5dp"/>
            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/d60dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_width="@dimen/d85dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/bg_rightmenu_notification"
                    android:src="@drawable/img_notification" />

                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/img_notification"
                    android:layout_marginRight="@dimen/d5dp"
                    android:background="@drawable/bg_notificaton"
                    android:gravity="center"
                    android:paddingLeft="@dimen/d8dp"
                    android:paddingRight="@dimen/d8dp"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/d16sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_message"
                    android:layout_width="@dimen/d85dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_notification"
                    android:background="@drawable/bg_rightmenu_notification"
                    android:src="@drawable/img_message" />

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/img_message"
                    android:layout_marginRight="@dimen/d5dp"
                    android:background="@drawable/bg_message"
                    android:gravity="center"
                    android:paddingLeft="@dimen/d8dp"
                    android:paddingRight="@dimen/d8dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/d16sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_friend_request"
                    android:layout_width="@dimen/d85dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_message"
                    android:background="@drawable/bg_rightmenu_notification"
                    android:src="@drawable/img_friend_request" />

                <TextView
                    android:id="@+id/tv_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/img_friend_request"
                    android:layout_marginRight="@dimen/d5dp"
                    android:background="@drawable/bg_friend_request"
                    android:gravity="center"
                    android:paddingLeft="@dimen/d8dp"
                    android:paddingRight="@dimen/d8dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/d16sp"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"></RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"></RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_general_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile_lable"
            android:gravity="left"
            android:padding="@dimen/d20sp"
            android:text="@string/str_general_setting"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/tv_myfeeds"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile_lable"
            android:gravity="left"
            android:padding="@dimen/d20sp"
            android:text="@string/str_myfeeds"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/tv_mystudents"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile_lable"
            android:gravity="left"
            android:padding="@dimen/d20sp"
            android:text="@string/str_my_students"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/tv_myactivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile_lable"
            android:gravity="left"
            android:padding="@dimen/d20sp"
            android:text="@string/str_myactivity"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/d20sp" />

    </LinearLayout>


</LinearLayout>

