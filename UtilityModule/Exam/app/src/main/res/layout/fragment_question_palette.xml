<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:context="com.ism.exam.fragment.QuestionPaletteFragment">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/content_right_width"
		android:background="@color/color_green"
		android:padding="10dp"
		android:text="@string/question_palette"
		android:textAllCaps="true"
		android:textSize="@dimen/queston_palette_text_size"
		android:textColor="@android:color/white"/>

	<GridView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/txt_legend"
		android:numColumns="5"

		android:verticalSpacing="5dp"
		android:horizontalSpacing="5dp"
		android:stretchMode="columnWidth"></GridView>

	<TextView
		android:id="@+id/txt_legend"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/legend"
		android:textAllCaps="true"
		android:textSize="@dimen/d18sp"
		android:layout_above="@+id/txt_current_question"/>

	<TextView
		android:id="@+id/txt_review_later"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/txt_current_question"
		android:layout_marginBottom="@dimen/exam_padding"
		android:layout_marginLeft="@dimen/question_palette_padding"
		android:layout_marginRight="@dimen/question_palette_padding"
		android:drawableLeft="@drawable/ic_review_small"
		android:drawablePadding="@dimen/question_palette_padding"
		android:gravity="center_vertical"
		android:textSize="@dimen/queston_palette_text_size"
		android:text="@string/review_later"/>

	<TextView
		android:id="@+id/txt_current_question"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/btn_end_test"
		android:layout_marginBottom="@dimen/exam_padding"
		android:layout_marginLeft="@dimen/question_palette_padding"
		android:layout_marginRight="@dimen/question_palette_padding"
		android:drawableLeft="@drawable/ic_review_small"
		android:drawablePadding="@dimen/question_palette_padding"
		android:gravity="center_vertical"
		android:textSize="@dimen/queston_palette_text_size"
		android:text="@string/current_question"/>

	<Button
		android:id="@+id/btn_end_test"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="@dimen/exam_padding"
		android:text="@string/end_test"
		android:textAllCaps="true"
		android:textColor="@android:color/white"/>

</RelativeLayout>
