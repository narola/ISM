<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context="com.ism.exam.TestActivity">

	<RadioGroup
		android:id="@+id/rg_options"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginRight="30dp"
		android:layout_marginLeft="30dp"
		android:layout_marginBottom="30dp"
		android:orientation="vertical">

		<RadioButton
			android:id="@+id/rb_op1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:button="@drawable/bg_rb"
			android:padding="5dp"
			android:text="Option 1"
			android:textSize="@dimen/d18sp"/>

		<RadioButton
			android:id="@+id/rb_op2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:button="@drawable/bg_rb"
			android:padding="5dp"
			android:text="Option 2"
			android:textSize="@dimen/d18sp"/>

		<RadioButton
			android:id="@+id/rb_op3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:button="@drawable/bg_rb"
			android:padding="5dp"
			android:text="Option 3"
			android:textSize="@dimen/d18sp"/>

		<RadioButton
			android:id="@+id/rb_op4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:button="@drawable/bg_rb"
			android:padding="5dp"
			android:text="Option 4"
			android:textSize="@dimen/d18sp"/>

		<RadioButton
			android:id="@+id/rb_op5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:button="@drawable/bg_rb"
			android:padding="5dp"
			android:text="Option 5"
			android:textSize="@dimen/d18sp"/>

		<RadioButton
			android:id="@+id/rb_op6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:button="@drawable/bg_rb"
			android:padding="5dp"
			android:text="Option 6"
			android:textSize="@dimen/d18sp"/>
	</RadioGroup>

	<Button
		android:id="@+id/btn_uncheck_selection"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Uncheck selection"
		android:layout_marginBottom="5dp"
		android:layout_above="@+id/btn_clear_selection"/>

	<Button
		android:id="@+id/btn_clear_selection"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Clear selection"
		android:layout_alignParentBottom="true"/>

</RelativeLayout>
