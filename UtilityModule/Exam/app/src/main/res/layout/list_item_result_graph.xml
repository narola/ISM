<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/score_spacing"
        android:paddingLeft="@dimen/score_spacing_double"
        android:paddingBottom="40dp"
        android:background="@drawable/bg_white_border_bottom"
        android:textAllCaps="true"
        android:textSize="@dimen/d20sp"
        android:text="Subject 1"
        android:textColor="@color/bg_app_dark"
        android:gravity="start"/>

    <ProgressBar
        android:id="@+id/prog_score"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="@dimen/score_spacing_double"
        android:layout_marginRight="@dimen/score_spacing_double"
        android:progressDrawable="@drawable/bg_progress_score"
	    style="?android:attr/progressBarStyleHorizontal"/>
</RelativeLayout>