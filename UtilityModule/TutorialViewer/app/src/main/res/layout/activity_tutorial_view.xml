<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.narola.kpa.tutorialviewer.TutorialViewActivity">

	<EditText
		android:id="@+id/edit_link"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="textMultiLine"
		android:visibility="gone"/>

	<com.narola.kpa.tutorialviewer.view.TutorialView
		android:id="@+id/tutorial_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/edit_link"></com.narola.kpa.tutorialviewer.view.TutorialView>
</RelativeLayout>
