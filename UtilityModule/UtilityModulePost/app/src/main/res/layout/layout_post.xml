<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_sayit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="85dp"
                android:layout_weight="0.8"
                android:background="@color/color_white"
                android:gravity="top"
                android:hint="SAY IT"
                android:padding="10dp" />

            <ism.com.utilitymodulepost.helper.HorizontalListView
                android:id="@+id/horilistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="85dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tools"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/rl_main"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_keyboard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#343D42"
                android:padding="5dp"
                android:src="@drawable/img_keyboard" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_link"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#343D42"
                android:padding="5dp"
                android:src="@drawable/img_link" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#343D42"
                android:padding="5dp"
                android:src="@drawable/img_image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#343D42"
                android:padding="5dp"
                android:src="@drawable/img_video" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_audio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#343D42"
                android:padding="5dp"
                android:src="@drawable/img_audio" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_tool"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#343D42"
                android:padding="5dp"
                android:src="@drawable/img_tools" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_gray" />

            <ImageView
                android:id="@+id/img_emoticons"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#343D42"
                android:padding="5dp"
                android:src="@drawable/img_emoticons" />
        </LinearLayout>

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="gone"
    android:background="@drawable/bg_bottompost"
    android:layout_weight="1">

</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        android:background="@drawable/bg_bottompost"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_captureimg"
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:src="@drawable/imgcamera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/strcaptureimageusingcamera"
                android:textColor="@color/color_black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chooseimg"
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/imggallery" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/strchooseimagefromgallery"
                android:textColor="@color/color_black"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>